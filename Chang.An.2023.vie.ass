Dialogue: 0,1:36:23.11,1:36:24.40,Main,,0,0,0,,Hóa ra là huynh.
Dialogue: 0,1:36:25.44,1:36:26.66,Main,,0,0,0,,Thật tốt quá.
Dialogue: 0,1:36:27.01,1:36:29.58,Main,,0,0,0,,Mấy năm nay ta vẫn luôn đọc được\N thơ của huynh.
Dialogue: 0,1:36:29.58,1:36:31.38,Main,,0,0,0,,Mọi người đều thích \Nthơ biên tái của huynh.
Dialogue: 0,1:36:31.80,1:36:33.34,Main,,0,0,0,,Nhưng ta thích nhất là câu...
Dialogue: 0,1:36:33.64,1:36:36.48,Main,thơ/văn,0,0,0,,{\i1}Mấy vạn dặm gió mang\NTrên sông một bóng chàng.
Dialogue: 0,1:36:36.90,1:36:38.13,Main,,0,0,0,,Phóng khoáng vô cùng.
Dialogue: 0,1:36:38.78,1:36:39.98,Main,,0,0,0,,Đỗ huynh quá khen.
Dialogue: 0,1:36:40.27,1:36:43.17,Main,thơ/văn,0,0,0,,Còn câu của huynh, \N{\i1}"Thế nên thề lên đỉnh, vọng xuống hàng núi con."{\i0}
Dialogue: 0,1:36:43.17,1:36:44.83,Main,,0,0,0,,mới là chí khí ngút trời.
Dialogue: 0,1:36:46.62,1:36:47.81,Main,,0,0,0,,Huynh cũng đến tìm Lý Bạch à?
Dialogue: 0,1:36:48.23,1:36:50.21,Main,,0,0,0,,Phải, gõ cửa không thấy trả lời.
Dialogue: 0,1:36:50.21,1:36:52.46,Main,,0,0,0,,Hôm trước ta\N cũng không thấy Lý học sĩ về.
Dialogue: 0,1:36:52.46,1:36:53.94,Main,,0,0,0,,Ông ấy uống giỏi thật.
Dialogue: 0,1:36:54.23,1:36:57.75,Main,,0,0,0,,Ông ấy à, nhất định lại la cà ở\N tửu điếm Hồ cơ bên Khúc Giang rồi.
Dialogue: 0,1:36:57.75,1:36:58.88,Main,,0,0,0,,Nào thì hát mới múa mới.
Dialogue: 0,1:36:59.03,1:36:59.90,Main,,0,0,0,,Nào, đi thôi.
Dialogue: 0,1:37:00.04,1:37:02.00,Main,,0,0,0,,Cùng đi tìm ông ấy, nào.
Dialogue: 0,1:37:04.65,1:37:05.86,Main,,0,0,0,,Hồ Khúc Giang.
Dialogue: 0,1:37:06.15,1:37:07.86,Main,,0,0,0,,Khúc Giang yến năm nay vừa mới tổ chức xong.
Dialogue: 0,1:37:08.00,1:37:11.31,Main,,0,0,0,,Nhưng việc buôn bán ở các tửu lầu, tửu điếm\N vẫn vô cùng thịnh vượng.
Dialogue: 0,1:37:11.57,1:37:13.98,Main,,0,0,0,,Đỗ huynh cũng đang chuẩn bị\N ứng thí phải không?
Dialogue: 0,1:37:15.07,1:37:17.19,Main,,0,0,0,,Ta đã thi hai lần, vẫn chưa đỗ.
Dialogue: 0,1:37:17.67,1:37:20.46,Main,,0,0,0,,Khúc Giang yến của ta, còn phải đợi thêm.
Dialogue: 0,1:37:22.53,1:37:23.52,Main,,0,0,0,,Chính là chỗ này.
Dialogue: 0,1:37:50.11,1:37:50.83,Main,,0,0,0,,Ở đó!
Dialogue: 0,1:37:51.04,1:37:51.79,Main,,0,0,0,,Hạ giám!
Dialogue: 0,1:37:51.92,1:37:52.88,Main,,0,0,0,,Hạ giám?
Dialogue: 0,1:37:55.11,1:37:55.97,Main,,0,0,0,,Hạ giám!
Dialogue: 0,1:37:56.22,1:37:58.65,Main,,0,0,0,,Hạ giám không sao.
Dialogue: 0,1:37:58.65,1:38:02.83,Main,,0,0,0,,Các vị xem, Hạ giám ngủ quên trong ao rồi.
Dialogue: 0,1:38:03.02,1:38:06.06,Signs,,0,0,0,,{\blur0.66\fscx120\fscy120\an7\fad(355,352)\pos(853.72,533.34)}Hạ Tri Chương
Dialogue: 0,1:38:08.86,1:38:11.04,Main,,0,0,0,,Mau mau mau, \NThái Bạch huynh ở trên kia.
Dialogue: 0,1:38:11.69,1:38:13.95,Main,,0,0,0,,Câu vừa rồi của Hạ giám là gì nhỉ?
Dialogue: 0,1:38:12.02,1:38:16.19,Signs,,0,0,0,,{\blur0.66\fscx120\fscy120\an7\fad(647,648)\pos(1308.57,207.85)}Trương \NHúc
Dialogue: 0,1:38:14.13,1:38:16.46,Main,thơ/văn,0,0,0,,Mạc ngôn xuân độ phương phi tận.
Dialogue: 0,1:38:16.46,1:38:18.64,Main,thơ/văn,0,0,0,,Phương phi tận.
Dialogue: 0,1:38:19.65,1:38:21.38,Main,,0,0,0,,Câu hay, câu hay.
Dialogue: 0,1:38:21.69,1:38:23.96,Main,,0,0,0,,Khó nối, khó nối.
Dialogue: 0,1:38:23.96,1:38:25.09,Main,,0,0,0,,Mau nối đi, mau nối đi.
Dialogue: 0,1:38:25.09,1:38:26.25,Main,,0,0,0,,Nếu nối không hay...
Dialogue: 0,1:38:26.25,1:38:27.95,Main,,0,0,0,,không được bước xuống \Nkhỏi tấm ván này.
Dialogue: 0,1:38:29.73,1:38:34.17,Main,thơ/văn,0,0,0,,Minh triêu khước đãi nhập hoa viên.
Dialogue: 0,1:38:34.17,1:38:34.96,Main,,0,0,0,,Thế nào?
Dialogue: 0,1:38:34.96,1:38:37.63,Main,,0,0,0,,Thôi được, thôi được, cho ông xuống.
Dialogue: 0,1:38:37.63,1:38:39.92,Main,,0,0,0,,Phải bù lại một bức thư pháp đó.
Dialogue: 0,1:38:39.92,1:38:41.77,Main,,0,0,0,,Được, được.
Dialogue: 0,1:38:42.65,1:38:44.14,Main,,0,0,0,,Đỗ Tử Mỹ.
Dialogue: 0,1:38:45.22,1:38:46.08,Main,,0,0,0,,Bạn mới.
Dialogue: 0,1:38:46.08,1:38:47.75,Main - Top,,0,0,0,,Đến lượt Thôi Tông Chi rồi.
Dialogue: 0,1:38:47.75,1:38:49.25,Main,,0,0,0,,Ta thì xin thôi.
Dialogue: 0,1:38:50.15,1:38:51.19,Main,,0,0,0,,Tông Chi, lên đi.
Dialogue: 0,1:38:50.15,1:38:51.19,Main - Top,,0,0,0,,Không, không, không.
Dialogue: 0,1:38:51.48,1:38:52.58,Main,,0,0,0,,Ta sợ độ cao.
Dialogue: 0,1:38:52.58,1:38:54.08,Main,,0,0,0,,Hạ giám lớn tuổi, Tông Chi còn trẻ.
Dialogue: 0,1:38:54.08,1:38:56.62,Main,,0,0,0,,Tấm ván này nên dài hơn một chút.
Dialogue: 0,1:38:57.98,1:38:59.46,Main,,0,0,0,,Tông Chi đừng sợ.
Dialogue: 0,1:38:59.71,1:39:01.71,Main,,0,0,0,,Nào, đưa cho Tông Chi cây tỳ bà.
Dialogue: 0,1:39:01.71,1:39:03.44,Main,,0,0,0,,Đàn rồi sẽ không sợ nữa.
Dialogue: 0,1:39:03.44,1:39:05.28,Main,,0,0,0,,Nối hai câu hay đi.
Dialogue: 0,1:39:09.36,1:39:10.30,Main,,0,0,0,,Lý Bạch.
Dialogue: 0,1:39:13.61,1:39:16.48,Main,,0,0,0,,Không trúng, phải phạt hai chén.
Dialogue: 0,1:39:20.44,1:39:23.23,Main,,0,0,0,,Cao Thích, Cao Tam Thập Ngũ.
Dialogue: 0,1:39:24.78,1:39:26.06,Main,,0,0,0,,Lại đây, lại đây.
Dialogue: 0,1:39:26.06,1:39:27.10,Main,,0,0,0,,Vị này là...
Dialogue: 0,1:39:27.29,1:39:28.05,Main,,0,0,0,,Cao Thích.
Dialogue: 0,1:39:28.42,1:39:29.89,Main,,0,0,0,,Mọi người đều nghe qua rồi chứ?
Dialogue: 0,1:39:31.40,1:39:33.81,Main,,0,0,0,,Chúng ta là bạn tốt hơn 20 năm rồi.
Dialogue: 0,1:39:34.12,1:39:35.90,Main,,0,0,0,,Lại đây, lại đây, giới thiệu một chút.
Dialogue: 0,1:39:36.98,1:39:39.26,Main,,0,0,0,,Nhữ Dương Vương.
Dialogue: 0,1:39:38.48,1:39:42.56,Signs,,0,0,0,,Nhữ Dương Vương.
Dialogue: 0,1:39:39.28,1:39:41.67,Main,,0,0,0,,Cháu trưởng của Duệ Tông hoàng đế.
Dialogue: 0,1:39:41.67,1:39:44.25,Main,,0,0,0,,Chúng ta thơ rượu giao du bình đẳng,\N không phân biệt vương hầu.
Dialogue: 0,1:39:44.25,1:39:45.35,Main,,0,0,0,,Ngưỡng mộ đã lâu, ngưỡng mộ đã lâu.
Dialogue: 0,1:39:45.35,1:39:46.60,Main,,0,0,0,,Còn vị này.
Dialogue: 0,1:39:47.03,1:39:49.42,Main,,0,0,0,,Lý Ung, Lý thái thú.
Dialogue: 0,1:39:47.48,1:39:51.31,Signs,,0,0,0,,Lý Ung, Lý thái thú.
Dialogue: 0,1:39:49.42,1:39:51.52,Main,,0,0,0,,Hành thư xuất chúng nhất thời nay.
Dialogue: 0,1:39:51.52,1:39:53.40,Main,,0,0,0,,Ngưỡng mộ đã lâu, ngưỡng mộ đã lâu.
Dialogue: 0,1:39:51.52,1:39:53.40,Main - Top,,0,0,0,,Hân hạnh, hân hạnh.
Dialogue: 0,1:39:55.15,1:39:56.44,Main,,0,0,0,,Hai vị này.
Dialogue: 0,1:39:56.44,1:39:58.75,Main,,0,0,0,,Hai vị này là Vương Xương Linh, Sầm Tham.
Dialogue: 0,1:39:56.85,1:39:59.85,Signs,,0,0,0,,Vương Xương Linh, Sầm Tham
Dialogue: 0,1:39:58.75,1:40:00.32,Main,,0,0,0,,Huynh nhất định đã nghe qua.
Dialogue: 0,1:40:00.32,1:40:03.63,Main,thơ/văn,0,0,0,,Tần thời minh nguyệt Hán thời quan,
Dialogue: 0,1:40:03.63,1:40:05.71,Main,thơ/văn,0,0,0,,Vạn lý trường chinh nhân vị hoàn.
Dialogue: 0,1:40:05.71,1:40:07.18,Main,,0,0,0,,Chê cười rồi, chê cười rồi.
Dialogue: 0,1:40:07.18,1:40:10.81,Main,thơ/văn,0,0,0,,Hốt như nhất dạ xuân phong lai,
Dialogue: 0,1:40:10.98,1:40:14.68,Main,thơ/văn,0,0,0,,Thiên thụ vạn thụ lê hoa khai.
Dialogue: 0,1:40:16.11,1:40:17.21,Main,,0,0,0,,Ngưỡng mộ đã lâu, ngưỡng mộ đã lâu.
Dialogue: 0,1:40:17.21,1:40:19.62,Main,,0,0,0,,Các vị đều nổi danh với thơ biên tái.
Dialogue: 0,1:40:19.88,1:40:21.21,Main,,0,0,0,,Ngưỡng mộ đã lâu, ngưỡng mộ đã lâu.
Dialogue: 0,1:40:21.21,1:40:23.82,Main,,0,0,0,,Thôi Tông Chi, thiếu niên anh tuấn.
Dialogue: 0,1:40:26.82,1:40:27.66,Main,,0,0,0,,Ngưỡng mộ đã lâu, ngưỡng mộ đã lâu.
Dialogue: 0,1:40:27.82,1:40:29.33,Main,,0,0,0,,Tiếng tỳ bà của Tông Chi...
Dialogue: 0,1:40:29.33,1:40:33.17,Main,,0,0,0,,đàn ra được sự kinh hồn khiếp vía\N của Phá Trận Khúc.
Dialogue: 0,1:40:33.17,1:40:34.40,Main,,0,0,0,,Vương Duy huynh.
Dialogue: 0,1:40:34.96,1:40:36.08,Main,,0,0,0,,Vương Duy huynh cũng ở đây.
Dialogue: 0,1:40:36.08,1:40:37.58,Main,,0,0,0,,Thật trùng hợp, thật trùng hợp.
Dialogue: 0,1:40:39.03,1:40:41.68,Main,,0,0,0,,Vương Duy huynh, \Nhuynh cũng lại đây nối hai câu đi.
Dialogue: 0,1:40:42.44,1:40:44.62,Main,,0,0,0,,Các vị cứ vui vẻ, ta còn có việc.
Dialogue: 0,1:40:44.83,1:40:45.82,Main,,0,0,0,,Xin cáo lui trước.
Dialogue: 0,1:40:49.40,1:40:52.17,Main,,0,0,0,,Ma Cật cư sĩ \Nbị tiếng ợ rượu của ông hun cho,
Dialogue: 0,1:40:52.17,1:40:54.13,Main,,0,0,0,,mất luôn mười mấy năm tu hành.
Dialogue: 0,1:40:54.13,1:40:56.89,Main,,0,0,0,,Đến lượt ta, ta đến đây, ta đến đây.
Dialogue: 0,1:40:58.82,1:41:00.48,Main,,0,0,0,,Cao Tam Thập Ngũ.
Dialogue: 0,1:41:00.69,1:41:02.61,Main,,0,0,0,,Cao Tam Thập Ngũ.
Dialogue: 0,1:41:02.95,1:41:04.18,Main,,0,0,0,,Mau nói cho ta biết.
Dialogue: 0,1:41:04.40,1:41:07.56,Main,,0,0,0,,Sao huynh lại đột nhiên \Nđến Trường An vậy?
Dialogue: 0,1:41:08.35,1:41:10.88,Main,,0,0,0,,Sao huynh không báo trước \Ncho ta một tiếng?
Dialogue: 0,1:41:10.88,1:41:13.69,Main,,0,0,0,,T-Ta là nhận được\N bức thư gấp của Lý huynh mà.
Dialogue: 0,1:41:15.97,1:41:17.58,Main,,0,0,0,,Thư gấp của ta?
Dialogue: 0,1:41:19.48,1:41:21.95,Main,,0,0,0,,Xương Linh huynh, \Ncó phải huynh không nối được không?
Dialogue: 0,1:41:21.95,1:41:22.96,Main,,0,0,0,,Xương Linh huynh.
Dialogue: 0,1:41:22.96,1:41:25.48,Main,,0,0,0,,Nếu huynh không nối được \Nthì phải chịu phạt đó.
Dialogue: 0,1:41:25.48,1:41:27.89,Main,,0,0,0,,Để ta, để ta. Ta đến đây.
Dialogue: 0,1:41:31.42,1:41:32.44,Main,,0,0,0,,Tỳ bà đâu.
Dialogue: 0,1:41:37.19,1:41:41.75,Main,,0,0,0,,Lý Bạch... không phải người phàm trần.
Dialogue: 0,1:41:41.75,1:41:45.18,Main,,0,0,0,,Mà là trích tiên trên trời.
Dialogue: 0,1:41:45.50,1:41:49.04,Main,,0,0,0,,Vậy ta nên quay về trời lúc nào đây, hả?
Dialogue: 0,1:41:49.34,1:41:53.23,Main,,0,0,0,,Hồ cơ, Hồ cơ, múa nhanh hơn nữa.
Dialogue: 0,1:41:53.50,1:41:54.85,Main,,0,0,0,,Nào!
Dialogue: 0,1:42:01.19,1:42:06.10,Main,thơ/văn,0,0,0,,Cầm tấu Long Môn chi lục đồng,
Dialogue: 0,1:42:06.65,1:42:12.96,Main,thơ/văn,0,0,0,,Ngọc hồ mỹ tửu thanh nhược không.
Dialogue: 0,1:42:12.96,1:42:13.54,Main,,0,0,0,,Hay!
Dialogue: 0,1:42:13.54,1:42:15.58,Main,,0,0,0,,Lý Bạch là con của thương nhân,
Dialogue: 0,1:42:15.58,1:42:17.29,Main,,0,0,0,,lại có huyết mạch người Hồ,
Dialogue: 0,1:42:17.29,1:42:19.27,Main,,0,0,0,,vậy mà nổi danh thiên hạ.
Dialogue: 0,1:42:19.27,1:42:21.94,Main,,0,0,0,,Đại Đường của ta đúng là biển lớn\N dung nạp trăm sông.
Dialogue: 0,1:42:24.90,1:42:30.89,Main,thơ/văn,0,0,0,,Thôi huyền phất trụ dữ quân ẩm,
Dialogue: 0,1:42:33.15,1:42:35.90,Main,thơ/văn,0,0,0,,Hồ cơ mạo như hoa.
Dialogue: 0,1:42:36.08,1:42:39.63,Main,thơ/văn,0,0,0,,Đương lô tiếu xuân phong.
Dialogue: 0,1:42:39.63,1:42:44.64,Main,thơ/văn,0,0,0,,Tiếu xuân phong, vũ la y.
Dialogue: 0,1:42:47.44,1:42:50.69,Main,,0,0,0,,Đây không phải nối câu, \Nđây là câu mới.
Dialogue: 0,1:42:50.69,1:42:53.90,Main,,0,0,0,,Cả thể thơ cũng đổi rồi, phải phạt.
Dialogue: 0,1:42:54.44,1:42:57.46,Main,,0,0,0,,Được, phạt gì, các người nói đi.
Dialogue: 0,1:42:57.46,1:43:00.71,Main,,0,0,0,,Phải làm mười bài thơ mới được xuống.
Dialogue: 0,1:43:00.71,1:43:04.77,Main,,0,0,0,,Mười bài có là gì, \Nta làm trăm bài cho các người xem.
Dialogue: 0,1:43:04.77,1:43:10.18,Main,,0,0,0,,Hồ cơ, Hồ cơ, nào!\N Múa nhanh hơn nữa.
Dialogue: 0,1:43:22.19,1:43:23.17,Main,,0,0,0,,Cao huynh.
Dialogue: 0,1:43:23.78,1:43:24.78,Main,,0,0,0,,Cao huynh?
Dialogue: 0,1:43:30.56,1:43:31.65,Main,,0,0,0,,Cao huynh.
Dialogue: 0,1:43:31.79,1:43:32.52,Main,,0,0,0,,Cao huynh!
Dialogue: 0,1:43:35.57,1:43:38.83,Main,,0,0,0,,Ngay cả con ngựa của ta \Ncũng nóng lòng muốn về nhà rồi.
Dialogue: 0,1:43:39.98,1:43:40.74,Main,,0,0,0,,Đỗ huynh.
Dialogue: 0,1:43:41.19,1:43:43.55,Main,,0,0,0,,Từ biệt tại đây, mời huynh về.
Dialogue: 0,1:43:44.23,1:43:46.83,Main,,0,0,0,,Cao huynh vừa đến Trường An\N đã vội rời đi như vậy.
Dialogue: 0,1:43:46.83,1:43:48.34,Main,,0,0,0,,Sao không ở lại thêm vài ngày?
Dialogue: 0,1:43:49.03,1:43:49.92,Main,,0,0,0,,Lý Bạch...
Dialogue: 0,1:43:51.23,1:43:52.34,Main,,0,0,0,,Lý Bạch huynh tỉnh rượu,
Dialogue: 0,1:43:52.65,1:43:54.35,Main,,0,0,0,,nhất định sẽ giữ Cao huynh ở lại.
Dialogue: 0,1:43:55.36,1:43:56.54,Main,,0,0,0,,Cơn say này của huynh ấy...
Dialogue: 0,1:43:57.44,1:43:58.96,Main,,0,0,0,,bao giờ mới tỉnh đây?
Dialogue: 0,1:44:01.98,1:44:04.10,Main,,0,0,0,,Đại bàng tiêu dao nơi mây xanh.
Dialogue: 0,1:44:04.28,1:44:06.54,Main,,0,0,0,,Huynh ấy vốn không câu nệ \Ntiểu tiết nơi nhân gian.
Dialogue: 0,1:44:07.17,1:44:08.45,Main,,0,0,0,,Ta không trách huynh ấy.
Dialogue: 0,1:44:12.07,1:44:14.13,Main,,0,0,0,,Đỗ huynh, trước khi từ biệt,
Dialogue: 0,1:44:14.33,1:44:15.74,Main,,0,0,0,,có thể cùng ta đến một nơi không?
Dialogue: 0,1:44:21.44,1:44:26.65,Signs,,0,0,0,,
Dialogue: 0,1:44:34.61,1:44:35.55,Main,,0,0,0,,Đỗ huynh.
Dialogue: 0,1:44:36.21,1:44:37.36,Main,,0,0,0,,Huynh có biết không?
Dialogue: 0,1:44:38.32,1:44:42.25,Main,,0,0,0,,Tổ phụ của ta, \N20 tuổi làm Kiêu Kỵ Lang Tướng,
Dialogue: 0,1:44:42.25,1:44:44.70,Main,,0,0,0,,bắt sống Khả Hãn của Đột Quyết là Xa Tị.
Dialogue: 0,1:44:45.11,1:44:47.89,Main,,0,0,0,,30 tuổi theo Lý Tích công \Ndiệt Cao Câu Ly.
Dialogue: 0,1:44:48.23,1:44:50.21,Main,,0,0,0,,40 tuổi đại phá Tân La.
Dialogue: 0,1:44:50.98,1:44:52.52,Main,,0,0,0,,42 tuổi...
Dialogue: 0,1:44:54.69,1:44:56.45,Main,,0,0,0,,thì qua đời.
Dialogue: 0,1:45:01.11,1:45:03.55,Main,,0,0,0,,Ta năm nay đã 43 tuổi rồi.
Dialogue: 0,1:45:08.86,1:45:09.63,Main,,0,0,0,,Đỗ huynh.
Dialogue: 0,1:45:09.92,1:45:13.20,Main,,0,0,0,,Chúc huynh năm sau \Nmột bước vượt vũ môn, sớm ngày thành công.
Dialogue: 0,1:45:13.86,1:45:14.51,Main,,0,0,0,,Từ biệt.
Dialogue: 0,1:45:14.51,1:45:15.30,Main,,0,0,0,,Bảo trọng.
Dialogue: 0,1:45:23.03,1:45:24.21,Main,,0,0,0,,Ta ấy à.
Dialogue: 0,1:45:24.60,1:45:27.23,Main,,0,0,0,,Lại quay về Lương Viên ở Thương Khâu.
Dialogue: 0,1:45:44.77,1:45:45.94,Main,,0,0,0,,Bắn hay lắm!
Dialogue: 0,1:45:57.57,1:45:58.75,Main,,0,0,0,,Sao không bắn?
Dialogue: 0,1:45:59.23,1:46:00.48,Main,,0,0,0,,Một con nhạn lẻ loi.
Dialogue: 0,1:46:01.44,1:46:04.46,Main,,0,0,0,,Đang bay về phương nam, \Ncứ để nó bay đi.
Dialogue: 0,1:46:05.38,1:46:07.52,Main,,0,0,0,,Cao huynh có lòng từ bi như vậy.
Dialogue: 0,1:46:07.52,1:46:09.76,Main,,0,0,0,,Phải chăng rồi một ngày \Nsẽ bước vào cửa Phật?
Dialogue: 0,1:46:11.57,1:46:12.70,Main,,0,0,0,,Đỗ Phủ huynh.
Dialogue: 0,1:46:16.40,1:46:17.17,Main,,0,0,0,,Cao huynh.
Dialogue: 0,1:46:19.53,1:46:20.83,Main,,0,0,0,,Lâu không gặp, vẫn khỏe chứ?
Dialogue: 0,1:46:24.90,1:46:26.16,Main,,0,0,0,,Cao Tam Thập Ngũ.
Dialogue: 0,1:46:27.60,1:46:28.46,Main,,0,0,0,,Lý Bạch?
Dialogue: 0,1:46:29.57,1:46:30.35,Main,,0,0,0,,Huynh...
Dialogue: 0,1:46:30.66,1:46:32.94,Main,,0,0,0,,Sao huynh lại ăn mặc như đạo gia thế?
Dialogue: 0,1:46:38.53,1:46:40.37,Main,,0,0,0,,Mấy năm Lý Bạch huynh ở Trường An,
Dialogue: 0,1:46:40.65,1:46:43.58,Main,,0,0,0,,Lý Lâm Phủ ngày càng ghen ghét \NLý Bạch huynh.
Dialogue: 0,1:46:45.98,1:46:47.97,Main,,0,0,0,,Quý phi cũng hận ta.
Dialogue: 0,1:46:49.03,1:46:52.61,Main,,0,0,0,,Ta còn tưởng ta làm thơ \Nlà để ca ngợi vẻ đẹp của Quý phi.
Dialogue: 0,1:46:53.00,1:46:56.62,Main,,0,0,0,,Không ngờ, Quý phi lại cho rằng \Nta đang chế nhạo mới hay.
Dialogue: 0,1:46:57.73,1:46:59.76,Main,,0,0,0,,Cho nên Dương Quốc Trung\N cũng căm ghét Lý Bạch huynh.
Dialogue: 0,1:47:00.03,1:47:03.09,Main,,0,0,0,,Trường An đã trở thành \Nmột nơi vô cùng hiểm ác.
Dialogue: 0,1:47:04.44,1:47:05.52,Main,,0,0,0,,Thánh thượng...
Dialogue: 0,1:47:06.19,1:47:08.08,Main,,0,0,0,,Bám rồng không thành...
Dialogue: 0,1:47:10.03,1:47:12.32,Main,,0,0,0,,bỗng dưng rơi từ trên trời xuống.
Dialogue: 0,1:47:16.44,1:47:18.83,Main,thơ/văn,0,0,0,,An năng tồi mi chiết yêu sự quyền quý,
Dialogue: 0,1:47:19.41,1:47:22.73,Main,thơ/văn,0,0,0,,Sử ngã bất đắc khai tâm nhan.
Dialogue: 0,1:47:24.57,1:47:28.19,Main,,0,0,0,,Vậy tiếp theo huynh có dự định gì?
Dialogue: 0,1:47:32.03,1:47:34.14,Main,,0,0,0,,Ta muốn quy y đạo môn.
Dialogue: 0,1:47:34.65,1:47:36.18,Main,,0,0,0,,Quy y đạo môn?
Dialogue: 0,1:47:39.40,1:47:40.45,Main,,0,0,0,,Cao Thích,
Dialogue: 0,1:47:40.86,1:47:42.37,Main,,0,0,0,,ta không nói đùa đâu.
Dialogue: 0,1:47:42.94,1:47:44.03,Main,,0,0,0,,Thật đó.
Dialogue: 0,1:47:45.15,1:47:46.61,Main,,0,0,0,,Huynh xem Lương Viên này,
Dialogue: 0,1:47:47.44,1:47:50.21,Main,,0,0,0,,Lương Vương ngày ấy, nay ở đâu?
Dialogue: 0,1:47:50.78,1:47:55.87,Main,,0,0,0,,Trên đài cao này, \Nđã từng có bao nhiêu đàn ca điệu múa?
Dialogue: 0,1:47:58.78,1:48:02.31,Main,,0,0,0,,Huynh và ta gặp nhau lúc trẻ, \Nđều có chí lớn ngút trời.
Dialogue: 0,1:48:03.65,1:48:05.49,Main,,0,0,0,,Nhưng trong chớp mắt,
Dialogue: 0,1:48:10.53,1:48:13.04,Main,,0,0,0,,đều đã gần năm mươi rồi.
Dialogue: 0,1:48:14.07,1:48:17.65,Main,,0,0,0,,Phu nhân của ta cũng vừa mới qua đời.
Dialogue: 0,1:48:23.36,1:48:27.26,Main,,0,0,0,,Con đường nơi trần thế, ta không đi nổi nữa rồi.
Dialogue: 0,1:48:33.19,1:48:34.34,Main,,0,0,0,,Cao Thích.
Dialogue: 0,1:48:35.28,1:48:36.98,Main,,0,0,0,,Quãng đời còn lại đã ngắn.
Dialogue: 0,1:48:40.07,1:48:41.98,Main,,0,0,0,,Ta muốn đi con đường ra khỏi thế gian.
Dialogue: 0,1:48:56.57,1:48:57.88,Main,,0,0,0,,Cao thiên sư ở Bắc Hải,
Dialogue: 0,1:48:57.88,1:48:59.86,Main,,0,0,0,,đã dựng xong một đạo đàn ở Tế Nam,
Dialogue: 0,1:49:00.11,1:49:02.05,Main,,0,0,0,,để trao đạo lục cho Thái Bạch huynh.
Dialogue: 0,1:49:02.35,1:49:04.43,Main,,0,0,0,,Cao huynh, có lẽ huynh không biết,
Dialogue: 0,1:49:04.63,1:49:06.99,Main,,0,0,0,,việc nhận lấy đạo lục rất gian nan.
Dialogue: 0,1:49:07.31,1:49:09.04,Main,,0,0,0,,Lý Bạch huynh cần phải lên đạo đàn,
Dialogue: 0,1:49:09.04,1:49:11.52,Main,,0,0,0,,tụng kinh niệm chú, ngày đêm không nghỉ.
Dialogue: 0,1:49:13.02,1:49:16.31,Main,,0,0,0,,Cho nên ta muốn mời hai vị \Nđến hộ pháp cho ta.
Dialogue: 0,1:49:18.03,1:49:20.98,Main,,0,0,0,,Cao Thích, huynh là \Nngười bạn tốt nhất của ta.
Dialogue: 0,1:49:20.98,1:49:25.66,Main,,0,0,0,,Huynh hiểu ta, với tính khí của ta \Nmột mình ta căn bản không thể kiên trì nổi.
Dialogue: 0,1:49:29.15,1:49:30.61,Main,,0,0,0,,Con đại bàng này.
Dialogue: 0,1:49:31.19,1:49:32.72,Main,,0,0,0,,Bay không nổi nữa rồi.
Dialogue: 0,1:49:33.44,1:49:35.14,Main,,0,0,0,,Cũng không muốn bay nữa.
Dialogue: 0,1:49:37.48,1:49:41.12,Main,,0,0,0,,Ông ấy nói, ta là người bạn tốt nhất.
Dialogue: 0,1:49:41.50,1:49:42.67,Main,,0,0,0,,Ta sao?
Dialogue: 0,1:49:44.27,1:49:45.39,Main,,0,0,0,,Dù sao thì...
Dialogue: 0,1:49:46.51,1:49:47.76,Main,,0,0,0,,Ta đã đồng ý.
Dialogue: 0,1:49:49.15,1:49:52.48,Signs,,0,0,0,,{\blur0.66\fscx120\fscy120\an7\fad(727,0)\pos(1606.85,388.3)}Đạo \Nđàn\N Tế\N Nam 
Dialogue: 0,1:50:34.78,1:50:36.58,Main,,0,0,0,,Tân đạo sĩ.
Dialogue: 0,1:50:36.59,1:50:36.94,Main,,0,0,0,,Lý huynh.
Dialogue: 0,1:50:37.17,1:50:39.85,Main,,0,0,0,,- Lý huynh. - Nghi thức đã thành.
Dialogue: 0,1:50:41.03,1:50:43.24,Main,,0,0,0,,Hư vô vi sư,
Dialogue: 0,1:50:43.24,1:50:45.35,Main,,0,0,0,,Tự nhiên vi hữu.
Dialogue: 0,1:50:45.73,1:50:48.10,Main,,0,0,0,,Luyện nhĩ băng tuyết chi dung,
Dialogue: 0,1:50:48.44,1:50:51.43,Main,,0,0,0,,Diên nhĩ kim thạch chi thọ.
Dialogue: 0,1:50:57.65,1:50:58.81,Main,,0,0,0,,Cao huynh.
Dialogue: 0,1:50:59.94,1:51:04.89,Main,,0,0,0,,Ta đã thấy đầy trời tiên nhân,
Dialogue: 0,1:51:05.32,1:51:08.77,Main,,0,0,0,,mời ta quay về trời.
Dialogue: 0,1:51:10.36,1:51:16.06,Main,,0,0,0,,Ta sắp về trời rồi.
Dialogue: 0,1:51:24.57,1:51:27.73,Main,,0,0,0,,Mọi người cùng chúc mừng Lý Bạch huynh,
Dialogue: 0,1:51:27.73,1:51:30.38,Main,,0,0,0,,từ nay đã nhập đạo môn.
Dialogue: 0,1:51:31.86,1:51:33.25,Main,,0,0,0,,Lý huynh,
Dialogue: 0,1:51:33.25,1:51:37.27,Main,,0,0,0,,huynh nhập đạo môn, thành thánh nhân rồi,
Dialogue: 0,1:51:37.32,1:51:40.98,Main,,0,0,0,,sau này huynh còn uống như vậy nữa không?
Dialogue: 0,1:51:41.36,1:51:43.14,Main,,0,0,0,,Uống.
Dialogue: 0,1:51:43.14,1:51:48.18,Main,,0,0,0,,Rượu này chính là quỳnh tương ngọc dịch ta dùng để tu hành.
Dialogue: 0,1:51:55.15,1:51:56.48,Main,,0,0,0,,Cao Thích,
Dialogue: 0,1:51:57.03,1:51:59.55,Main,,0,0,0,,chúng ta quen biết hơn hai mươi năm,
Dialogue: 0,1:51:59.55,1:52:01.54,Main,,0,0,0,,đây là lần đầu tiên ta thấy huynh
Dialogue: 0,1:52:01.54,1:52:03.31,Main,,0,0,0,,uống rượu sảng khoái như vậy.
Dialogue: 0,1:52:03.31,1:52:06.56,Main,,0,0,0,,Nào nào nào, uống cho đã.
Dialogue: 0,1:52:07.98,1:52:09.31,Main,,0,0,0,,Uống!
Dialogue: 0,1:52:10.65,1:52:12.42,Main,,0,0,0,,Ta không uống được nữa.
Dialogue: 0,1:52:12.42,1:52:14.13,Main,,0,0,0,,Không được, không được.
Dialogue: 0,1:52:14.13,1:52:16.09,Main,,0,0,0,,Ta cũng không uống được nữa.
Dialogue: 0,1:52:16.09,1:52:17.35,Main,,0,0,0,,Không được.
Dialogue: 0,1:52:17.47,1:52:20.18,Main,,0,0,0,,Sầm phu tử, Đan Khâu Sinh,
Dialogue: 0,1:52:20.69,1:52:24.08,Main,,0,0,0,,hai vị phải tiếp tục uống, mọi người đều phải uống.
Dialogue: 0,1:52:24.08,1:52:25.60,Main,,0,0,0,,Không được dừng.
Dialogue: 0,1:52:30.78,1:52:32.89,Main,,0,0,0,,Ta có một bài thơ.
Dialogue: 0,1:52:32.90,1:52:37.02,Main,,0,0,0,,Ta muốn dùng thơ giúp vui cho mọi người.
Dialogue: 0,1:52:49.28,1:52:51.06,Main,,0,0,0,,Quân bất kiến,
Dialogue: 0,1:52:52.19,1:52:56.85,Main,,0,0,0,,Hoàng Hà chi thủy thiên thượng lai,
Dialogue: 0,1:52:59.32,1:53:05.06,Main,,0,0,0,,Bôn lưu đáo hải bất phục hồi.
Dialogue: 0,1:53:08.19,1:53:14.38,Main,,0,0,0,,Quân bất kiến, cao đường minh kính bi bạch phát,
Dialogue: 0,1:53:14.38,1:53:20.48,Main,,0,0,0,,Triêu như thanh ty mộ thành tuyết.
Dialogue: 0,1:53:21.48,1:53:24.38,Main,,0,0,0,,Nhân sinh đắc ý tu tận hoan,
Dialogue: 0,1:53:24.38,1:53:27.64,Main,,0,0,0,,Mạc sử kim tôn không đối nguyệt.
Dialogue: 0,1:53:29.44,1:53:33.02,Main,,0,0,0,,Thiên sinh ngã tài tất hữu dụng,
Dialogue: 0,1:53:34.03,1:53:37.56,Main,,0,0,0,,Thiên kim tán tận hoàn phục lai.
Dialogue: 0,1:53:43.98,1:53:48.06,Main,,0,0,0,,Phanh dương tể ngưu thả vi lạc,
Dialogue: 0,1:53:51.94,1:53:56.14,Main,,0,0,0,,Hội tu nhất ẩm tam bách bôi.
Dialogue: 0,1:54:31.98,1:54:34.65,Main,,0,0,0,,Sầm phu tử, Đan Khâu Sinh,
Dialogue: 0,1:54:34.65,1:54:38.02,Main,,0,0,0,,Tương tiến tửu, bôi mạc đình.
Dialogue: 0,1:54:43.19,1:54:45.58,Main,,0,0,0,,Dữ quân ca nhất khúc,
Dialogue: 0,1:54:45.58,1:54:50.89,Main,,0,0,0,,Thỉnh quân vị ngã khuynh nhĩ thính.
Dialogue: 0,1:55:04.82,1:55:07.89,Main,,0,0,0,,Chung cổ soạn ngọc bất túc quý,
Dialogue: 0,1:55:08.36,1:55:12.35,Main,,0,0,0,,Đãn nguyện trường túy bất phục tỉnh.
Dialogue: 0,1:55:14.06,1:55:17.48,Main,,0,0,0,,Cổ lai thánh hiền giai tịch mịch,
Dialogue: 0,1:55:17.48,1:55:21.10,Main,,0,0,0,,Duy hữu ẩm giả lưu kỳ danh.
Dialogue: 0,1:55:25.11,1:55:27.78,Main,,0,0,0,,Trần Vương tích thời yến Bình Lạc,
Dialogue: 0,1:55:27.78,1:55:31.48,Main,,0,0,0,,Đẩu tửu thập thiên tứ hoan hước.
Dialogue: 0,1:55:38.85,1:55:41.36,Main,,0,0,0,,Chủ nhân hà vi ngôn thiểu tiền,
Dialogue: 0,1:55:41.36,1:55:44.29,Main,,0,0,0,,Kính tu cô thủ đối quân chước.
Dialogue: 0,1:55:44.29,1:55:48.21,Main,,0,0,0,,Ngũ hoa mã, thiên kim cừu,
Dialogue: 0,1:55:48.21,1:55:50.21,Main,,0,0,0,,Hô nhi tương xuất hoán mỹ tửu,
Dialogue: 0,1:55:50.21,1:55:53.39,Main,,0,0,0,,Dữ nhĩ đồng tiêu vạn cổ sầu.
Dialogue: 0,1:55:56.11,1:55:59.31,Main,,0,0,0,,Dữ nhĩ đồng tiêu...
Dialogue: 0,1:56:03.19,1:56:09.31,Main,,0,0,0,,vạn cổ sầu.
Dialogue: 0,1:56:41.40,1:56:42.85,Main,,0,0,0,,Lý Bạch.
Dialogue: 0,1:56:43.40,1:56:45.02,Main,,0,0,0,,Ta đi đây.
Dialogue: 0,1:56:49.40,1:56:50.56,Main,,0,0,0,,Đi rồi.
Dialogue: 0,1:56:51.36,1:56:52.77,Main,,0,0,0,,Đi rồi.
Dialogue: 0,1:56:54.23,1:56:59.02,Main,,0,0,0,,Hôm nay từ biệt, không biết ngày nào mới gặp lại.
Dialogue: 0,1:57:00.11,1:57:05.27,Main,,0,0,0,,Có lẽ từ nay sẽ không còn ngày gặp lại nữa.
Dialogue: 0,1:57:06.61,1:57:09.63,Main,,0,0,0,,Hôm nay không gặp,
Dialogue: 0,1:57:09.65,1:57:11.64,Main,,0,0,0,,trên trời gặp.
Dialogue: 0,1:57:14.19,1:57:18.14,Main,,0,0,0,,Huynh là trích tiên, phải về trời.
Dialogue: 0,1:57:18.57,1:57:23.13,Main,,0,0,0,,Ta... ta là người thế gian.
Dialogue: 0,1:57:23.13,1:57:26.39,Main,,0,0,0,,Ta còn quanh quẩn ở thế gian.
Dialogue: 0,1:57:29.28,1:57:31.14,Main,,0,0,0,,Lý Bạch,
Dialogue: 0,1:57:31.69,1:57:37.02,Main,,0,0,0,,ta sắp ra biên ải đầu quân dưới trướng Ca Thư Hàn.
Dialogue: 0,1:57:38.90,1:57:42.92,Main,,0,0,0,,Thực hiện lời hẹn mười năm của ta.
Dialogue: 0,1:57:42.92,1:57:45.81,Main,,0,0,0,,Gì... hẹn ước gì?
Dialogue: 0,1:57:47.78,1:57:51.39,Main,,0,0,0,,Trong thơ huynh nói, đúng vậy.
Dialogue: 0,1:57:52.36,1:57:57.48,Main,,0,0,0,,Nước sông Hoàng Hà, chảy ra biển không quay trở lại.
Dialogue: 0,1:57:58.65,1:58:00.83,Main,,0,0,0,,Quãng đời còn lại tuy ngắn,
Dialogue: 0,1:58:00.86,1:58:05.47,Main,,0,0,0,,một ngày nào đó, khi ta đối diện với liệt tổ liệt tông,
Dialogue: 0,1:58:05.48,1:58:07.23,Main,,0,0,0,,ta có thể nói với họ rằng,
Dialogue: 0,1:58:07.90,1:58:10.77,Main,,0,0,0,,tuy không thể giống như họ,
Dialogue: 0,1:58:10.82,1:58:14.81,Main,,0,0,0,,một đao một thương chiến đấu nơi sa trường,
Dialogue: 0,1:58:16.61,1:58:21.06,Main,,0,0,0,,ta chỉ trở thành một văn nhân ký thất nhỏ bé,
Dialogue: 0,1:58:22.57,1:58:25.71,Main,,0,0,0,,nhưng cũng đã từng một nét bút, một nét vẽ,
Dialogue: 0,1:58:25.71,1:58:29.47,Main,,0,0,0,,cũng tung hoành nơi biên cương.
Dialogue: 0,1:58:29.48,1:58:31.09,Main,,0,0,0,,Tung hoành.
Dialogue: 0,1:58:31.11,1:58:32.67,Main,,0,0,0,,Khí phách lắm.
Dialogue: 0,1:58:32.67,1:58:35.10,Main,,0,0,0,,Tốt, tốt.
Dialogue: 0,1:58:35.73,1:58:38.52,Main,,0,0,0,,Nhưng mà Cao Thích,
Dialogue: 0,1:58:38.52,1:58:41.77,Main,,0,0,0,,huynh từng này tuổi rồi còn đến biên quan,
Dialogue: 0,1:58:43.69,1:58:46.32,Main,,0,0,0,,để ta thử xem thể phách của huynh thế nào.
Dialogue: 0,1:58:46.32,1:58:49.60,Main,,0,0,0,,Nào, chúng ta thử so tài xem.
Dialogue: 0,1:58:50.65,1:58:51.69,Main,,0,0,0,,Nào.
Dialogue: 0,1:59:42.57,1:59:44.10,Main,,0,0,0,,Cao Thích,
Dialogue: 0,1:59:44.69,1:59:47.60,Main,,0,0,0,,huynh thắng ta rồi.
Dialogue: 0,1:59:50.15,1:59:52.40,Main,,0,0,0,,Huynh đi đi.
Dialogue: 0,1:59:52.40,1:59:54.06,Main,,0,0,0,,Đi đi.
Dialogue: 0,1:59:58.07,1:59:59.43,Main,,0,0,0,,Từ biệt.
Dialogue: 0,2:00:12.94,2:00:19.02,Main,,0,0,0,,Triệu khách mạn hồ anh, Ngô câu sương tuyết minh.
Dialogue: 0,2:00:19.86,2:00:25.73,Main,,0,0,0,,Ngân yên chiếu bạch mã, táp đạp như lưu tinh.
Dialogue: 0,2:00:29.03,2:00:33.33,Main,,0,0,0,,Bài thơ này, hai mươi năm trước,
Dialogue: 0,2:00:33.33,2:00:37.98,Main,,0,0,0,,ta đã viết theo dáng vẻ của huynh đó, Cao Thích.
Dialogue: 0,2:00:51.98,2:00:57.10,Main,,0,0,0,,Kẻ sống là khách qua đường,
Dialogue: 0,2:00:57.10,2:01:00.56,Main,,0,0,0,,người chết là người trở về.
Dialogue: 0,2:01:02.23,2:01:05.93,Main,,0,0,0,,Trời đất là một quán trọ,
Dialogue: 0,2:01:06.65,2:01:10.39,Main,,0,0,0,,trời đất là một quán trọ.
Dialogue: 0,2:01:16.28,2:01:22.81,Main,,0,0,0,,Cùng buồn cho vạn cổ bụi trần.
Dialogue: 0,2:01:52.61,2:01:57.06,Main,,0,0,0,,Mới đến Lũng Hữu, liền tham gia vây công thành Thạch Bảo.
Dialogue: 0,2:02:02.67,2:02:04.79,Main,,0,0,0,,Thành Thạch Bảo dễ thủ khó công.
Dialogue: 0,2:02:05.40,2:02:09.62,Main,,0,0,0,,Ba vạn quân Đường vây công suốt nửa năm.
Dialogue: 0,2:02:09.65,2:02:11.73,Main,,0,0,0,,Thương vong thảm trọng.
Dialogue: 0,2:02:14.53,2:02:19.15,Main,,0,0,0,,Cuối cùng quân Thổ Phồn thủ thành hết lương thực đầu hàng.
Dialogue: 0,2:02:19.46,2:02:25.31,Main,,0,0,0,,Chúng tôi mới biết, thành Thạch Bảo này chỉ có sáu trăm quân thủ thành.
Dialogue: 0,2:02:26.19,2:02:28.67,Main,,0,0,0,,Sáu trăm quân thủ thành.
Dialogue: 0,2:02:28.67,2:02:33.06,Main,,0,0,0,,đã khiến chúng ta do dự dưới thành suốt nửa năm.
Dialogue: 0,2:02:36.94,2:02:42.69,Main,,0,0,0,,Thành Vân Sơn chính là một thành Thạch Bảo khác.
Dialogue: 0,2:02:43.65,2:02:44.90,Main,,0,0,0,,Báo!
Dialogue: 0,2:02:55.78,2:02:57.43,Main,,0,0,0,,Rạng sáng.
Dialogue: 0,2:02:59.15,2:03:01.63,Main,,0,0,0,,Thành Thạch Bảo tạm thời không liên quan đến ta.
Dialogue: 0,2:03:01.63,2:03:02.98,Main,,0,0,0,,Nói về Lý Bạch.
Dialogue: 0,2:03:05.86,2:03:08.77,Main,,0,0,0,,Tuy người ở biên quan,
Dialogue: 0,2:03:09.15,2:03:12.31,Main,,0,0,0,,ta vẫn thường đọc được thơ mới của Lý Bạch.
Dialogue: 0,2:03:12.77,2:03:17.27,Main,,0,0,0,,Huynh ấy phiêu bạt khắp nam bắc Đại Giang, các danh sơn đại xuyên.
Dialogue: 0,2:03:17.98,2:03:23.18,Main,,0,0,0,,Đời người có tiếc nuối, nhưng thơ của huynh ấy lại càng đặc sắc hơn.
Dialogue: 0,2:03:24.48,2:03:29.15,Main,,0,0,0,,Công công, đời người có nhiều chuyện tiếc nuối không?
Dialogue: 0,2:03:31.69,2:03:33.77,Main,,0,0,0,,Chuyện tiếc nuối?
Dialogue: 0,2:03:35.36,2:03:37.30,Main,,0,0,0,,Đương nhiên.
Dialogue: 0,2:03:37.32,2:03:40.53,Main,,0,0,0,,Cho dù ta có may mắn thành tựu được một phen công nghiệp,
Dialogue: 0,2:03:40.53,2:03:43.75,Main,,0,0,0,,hậu thế nhiều nhất cũng chỉ thấy tên ta
Dialogue: 0,2:03:43.75,2:03:45.98,Main,,0,0,0,,trong Hoạn quan liệt truyện.
Dialogue: 0,2:03:48.86,2:03:52.51,Main,,0,0,0,,Thời cuộc năm này qua năm khác lại khiến người ta bất an.
Dialogue: 0,2:03:52.49,2:03:56.23,Main,,0,0,0,,Triều chính càng thêm loạn lạc, người người tự thấy nguy hiểm.
Dialogue: 0,2:03:57.28,2:03:59.57,Main,,0,0,0,,Trong số những thi nhân ta quen biết,
Dialogue: 0,2:03:59.57,2:04:03.35,Main,,0,0,0,,Vương Xương Linh, Thôi Tông Chi bị lưu đày.
Dialogue: 0,2:04:03.94,2:04:10.27,Main,,0,0,0,,Thái thú Bắc Hải Lý Ung, bảy mươi tuổi bị đánh chết bằng trượng.
Dialogue: 0,2:04:12.23,2:04:15.64,Main,,0,0,0,,Biên quan gian khổ, nhưng lại đơn giản.
Dialogue: 0,2:04:16.69,2:04:19.64,Main,,0,0,0,,Chớp mắt đã là mười năm.
Dialogue: 0,2:04:20.73,2:04:24.18,Main,,0,0,0,,Cuộc đời ta sắp đến hồi kết.
Dialogue: 0,2:04:24.82,2:04:29.06,Main,,0,0,0,,Trong mười năm, dường như không có chuyện gì xảy ra.
Dialogue: 0,2:04:30.98,2:04:35.56,Main,,0,0,0,,Những năm đó, ta chỉ gặp Lý Bạch một lần.
Dialogue: 0,2:04:36.28,2:04:39.64,Main,,0,0,0,,Có một lần, ta đi công vụ qua Tuyên Thành.
Dialogue: 0,2:04:40.03,2:04:41.60,Main,,0,0,0,,Một bến đò.
Dialogue: 0,2:04:42.03,2:04:43.48,Main,,0,0,0,,Đó là ai vậy?
Dialogue: 0,2:04:43.48,2:04:45.29,Main,,0,0,0,,Lý Bạch, đại thi nhân.
Dialogue: 0,2:04:45.29,2:04:46.93,Main,,0,0,0,,Nghe nói còn có đạo hạnh.
Dialogue: 0,2:04:48.48,2:04:51.02,Main,,0,0,0,,Uông Luân huyện lệnh đối với ông ta, vô cùng sùng bái.
Dialogue: 0,2:04:51.82,2:04:55.35,Main,,0,0,0,,Đó là tân phu nhân của Lý Bạch, cháu gái của Tông tướng quốc.
Dialogue: 0,2:04:56.71,2:04:59.14,Main,,0,0,0,,Đời người như vậy, không thiệt rồi.
Dialogue: 0,2:05:00.06,2:05:02.64,Main,,0,0,0,,Ông ta là người ở rể, một tên tế tử.
Dialogue: 0,2:05:05.65,2:05:08.40,Main,,0,0,0,,Gia thế nhân vật như vậy, đổi lại là ta cũng ở rể.
Dialogue: 0,2:05:08.40,2:05:09.75,Main,,0,0,0,,Đổi lại là ngươi cũng vậy thôi.
Dialogue: 0,2:05:09.75,2:05:12.06,Main,,0,0,0,,Lý Bạch à Lý Bạch.
Dialogue: 0,2:05:13.57,2:05:18.14,Main,,0,0,0,,Ta đã nghĩ, quãng đời còn lại của hai chúng ta sẽ cứ như vậy.
Dialogue: 0,2:05:23.44,2:05:28.28,Main,,0,0,0,,Nhưng có lúc, đột nhiên, trong một ngày,
Dialogue: 0,2:05:28.28,2:05:32.60,Main,,0,0,0,,lại dường như chuyện của mấy trăm năm cùng xảy ra.
Dialogue: 0,2:05:33.03,2:05:37.50,Main,,0,0,0,,An Lộc Sơn, mười mấy năm qua sắp phản mà chưa phản.
Dialogue: 0,2:05:37.50,2:05:42.08,Main,,0,0,0,,Ai có thể ngờ Lý Lâm Phủ, một khúc gỗ mục,
Dialogue: 0,2:05:42.08,2:05:46.69,Main,,0,0,0,,lại là cây cột cuối cùng của tòa nhà sắp sụp đổ.
Dialogue: 0,2:05:46.69,2:05:50.73,Main,,0,0,0,,Lý Lâm Phủ tuy tham lam, nhưng lại tinh minh tài giỏi.
Dialogue: 0,2:05:50.78,2:05:55.89,Main,,0,0,0,,Sau mười chín năm nắm giữ triều chính, ông ta đột ngột qua đời.
Dialogue: 0,2:05:56.19,2:05:58.27,Main,,0,0,0,,Dương Quốc Trung kế nhiệm.
Dialogue: 0,2:05:59.36,2:06:02.81,Main,,0,0,0,,An Lộc Sơn làm phản rồi.
Dialogue: 0,2:06:05.28,2:06:06.73,Main,,0,0,0,,Báo!
Dialogue: 0,2:06:09.90,2:06:11.91,Main,,0,0,0,,Báo!
Dialogue: 0,2:06:11.91,2:06:14.44,Main,,0,0,0,,Báo!
Dialogue: 0,2:06:17.19,2:06:21.44,Main,,0,0,0,,Truyền lệnh của ta, triệu tập toàn quân.
Dialogue: 0,2:06:45.11,2:06:49.43,Main,,0,0,0,,Cao Tiên Chi, Phong Thường Thanh đều bị chém rồi.
Dialogue: 0,2:06:51.48,2:06:55.56,Main,,0,0,0,,Triều đình lớn như vậy mà lại không có tướng nào dùng được.
Dialogue: 0,2:06:56.11,2:07:00.52,Main,,0,0,0,,Chỉ còn lại ta, một kẻ tàn phế nửa người.
Dialogue: 0,2:07:02.65,2:07:05.60,Main,,0,0,0,,Nếu ta kháng lệnh không xuất quan quyết chiến,
Dialogue: 0,2:07:05.60,2:07:08.85,Main,,0,0,0,,triều đình tự nhiên cũng sẽ chém ta.
Dialogue: 0,2:07:10.40,2:07:12.73,Main,,0,0,0,,Ai sẽ thay thế ta?
Dialogue: 0,2:07:13.36,2:07:17.18,Main,,0,0,0,,E rằng là giám quân thái giám Biên Lệnh Thành.
Dialogue: 0,2:07:24.82,2:07:30.10,Main,,0,0,0,,Nếu ta trẻ lại vài tuổi thì tốt biết mấy.
Dialogue: 0,2:07:39.15,2:07:42.06,Main,,0,0,0,,Bắc Đẩu thất tinh cao,
Dialogue: 0,2:07:43.98,2:07:47.31,Main,,0,0,0,,Ca Thư dạ đới đao.
Dialogue: 0,2:07:49.44,2:07:52.23,Main,,0,0,0,,Chí kim khuy mục mã,
Dialogue: 0,2:07:54.10,2:07:57.93,Main,,0,0,0,,Bất cảm quá Lâm Thao.
Dialogue: 0,2:08:00.61,2:08:02.48,Main,,0,0,0,,Xuất quan thôi.
Dialogue: 0,2:08:57.82,2:08:58.94,Main,,0,0,0,,Mau mở cổng thành!
Dialogue: 0,2:09:21.82,2:09:24.98,Main,,0,0,0,,Các huynh đệ trên dưới toàn quân đã thương nghị xong.
Dialogue: 0,2:09:26.27,2:09:27.98,Main,,0,0,0,,Vận khí Đại Đường đã tận.
Dialogue: 0,2:09:28.03,2:09:30.64,Main,,0,0,0,,Thiên hạ là của Đại Yên rồi.
Dialogue: 0,2:09:30.82,2:09:33.60,Main,,0,0,0,,Chúng ta phải đầu hàng An Lộc Sơn.
Dialogue: 0,2:09:35.82,2:09:37.14,Main,,0,0,0,,Ca Thư Hàn.
Dialogue: 0,2:09:37.98,2:09:41.56,Main,,0,0,0,,Ca Thư Hàn, mọi người hỏi ngươi câu cuối cùng.
Dialogue: 0,2:09:41.71,2:09:45.60,Main,,0,0,0,,Ngươi hàng hay không hàng?
Dialogue: 0,2:09:58.82,2:10:00.85,Main,,0,0,0,,Đỡ ta lên ngựa.
Dialogue: 0,2:10:09.44,2:10:13.58,Main,,0,0,0,,Chỉ tiếc ta luyện cả đời thương pháp nhà họ Cao,
Dialogue: 0,2:10:13.58,2:10:15.18,Main,,0,0,0,,chưa từng ra trận giết giặc.
Dialogue: 0,2:10:15.86,2:10:19.85,Main,,0,0,0,,Đành phải ở đây giết thêm vài tên tiểu nhân.
Dialogue: 0,2:10:20.61,2:10:26.23,Main,,0,0,0,,Cao Thích, đám phản binh phản tướng này mục tiêu là ta.
Dialogue: 0,2:10:27.11,2:10:32.46,Main,,0,0,0,,Nếu có cơ hội, ta mong quân hãy cố gắng phá vòng vây thoát ra.
Dialogue: 0,2:10:32.46,2:10:34.77,Main,,0,0,0,,Bẩm báo với hoàng đế,
Dialogue: 0,2:10:35.11,2:10:39.60,Main,,0,0,0,,phiên tướng không phải ai cũng là phản thần.
Dialogue: 0,2:11:06.19,2:11:07.31,Main,,0,0,0,,Tướng quân!
Dialogue: 0,2:11:07.48,2:11:09.98,Main,,0,0,0,,Đi đi, Cao Thích!
Dialogue: 0,2:11:10.78,2:11:14.73,Main,,0,0,0,,Ta, Ca Thư Hàn, không đầu hàng.
Dialogue: 0,2:11:14.94,2:11:17.39,Main,,0,0,0,,Đi!
Dialogue: 0,2:13:16.73,2:13:19.10,Main,,0,0,0,,Đồng Quan thất thủ.
Dialogue: 0,2:13:19.36,2:13:22.06,Main,,0,0,0,,Triều đình đã chạy khỏi Trường An.
Dialogue: 0,2:13:23.28,2:13:25.98,Main,,0,0,0,,Ta đuổi theo về phía tây.
Dialogue: 0,2:13:26.86,2:13:31.02,Main,,0,0,0,,Dương Quốc Trung bị giết, Quý phi bị ban chết.
Dialogue: 0,2:13:31.61,2:13:35.15,Main,,0,0,0,,Khắp nơi đều truyền đến tin tức quan viên tướng lĩnh
Dialogue: 0,2:13:35.15,2:13:38.40,Main,,0,0,0,,đầu hàng An Lộc Sơn.
Dialogue: 0,2:13:38.44,2:13:40.79,Main,,0,0,0,,Những người không đầu hàng,
Dialogue: 0,2:13:40.82,2:13:45.93,Main,,0,0,0,,trong đó có một số kẻ thực lực mạnh mẽ, dã tâm to lớn,
Dialogue: 0,2:13:45.93,2:13:47.52,Main,,0,0,0,,đã tạo phản.
Dialogue: 0,2:13:51.40,2:13:56.18,Main,,0,0,0,,Thiên hạ hoàn toàn loạn rồi.
Dialogue: 0,2:14:26.17,2:14:27.73,Main,,0,0,0,,Tân nhiệm Hoài Nam Tiết độ sứ,
Dialogue: 0,2:14:27.96,2:14:30.75,Main,,0,0,0,,tiết chế mọi việc quân chính dân sự của ba trấn Giang Hoài.
Dialogue: 0,2:14:30.75,2:14:32.85,Main,,0,0,0,,Dẹp yên loạn Vĩnh Vương.
Dialogue: 0,2:14:48.67,2:14:49.56,Main,,0,0,0,,Báo sứ quân,
Dialogue: 0,2:14:50.11,2:14:52.68,Main,,0,0,0,,các nơi phản quân đang lũ lượt kéo về Giang Lăng.
Dialogue: 0,2:15:01.69,2:15:02.92,Main,,0,0,0,,Báo sứ quân,
Dialogue: 0,2:15:02.92,2:15:05.79,Main,,0,0,0,,Vĩnh Vương đã lệnh cho thuế má Giang Hoài đều phải nộp về Giang Lăng.
Dialogue: 0,2:15:05.79,2:15:07.35,Main,,0,0,0,,Kỵ binh do thám đã rời khỏi Giang Lăng.
Dialogue: 0,2:15:52.82,2:15:54.00,Main,,0,0,0,,Báo sứ quân,
Dialogue: 0,2:15:54.00,2:15:56.94,Main,,0,0,0,,toàn quân của Vĩnh Vương đã rời khỏi Giang Lăng, chưa rõ hướng đi.
Dialogue: 0,2:15:56.94,2:16:00.11,Main,,0,0,0,,Vĩnh Vương phát hịch văn, triệu tập anh hùng thiên hạ.
Dialogue: 0,2:16:00.11,2:16:00.90,Main,,0,0,0,,Đọc.
Dialogue: 0,2:16:01.57,2:16:03.17,Main,,0,0,0,,Cái văn hữu phi thường chi nguy,
Dialogue: 0,2:16:03.17,2:16:06.35,Main,,0,0,0,,tất sinh phi thường chi nhân, đắc lập phi thường chi công.
Dialogue: 0,2:16:07.03,2:16:10.48,Main,,0,0,0,,Phải, phi thường chi nguy.
Dialogue: 0,2:16:10.94,2:16:14.32,Main,,0,0,0,,Mới khiến cho một tiểu quan tòng bát phẩm như ta,
Dialogue: 0,2:16:14.32,2:16:18.73,Main,,0,0,0,,trong nửa năm, đột nhiên trở thành Tiết độ sứ ba trấn.
Dialogue: 0,2:16:22.73,2:16:25.89,Main,,0,0,0,,Sứ quân, hướng đi của toàn quân Vĩnh Vương đã rõ.
Dialogue: 0,2:16:26.40,2:16:27.06,Main,,0,0,0,,Nói.
Dialogue: 0,2:16:27.06,2:16:29.85,Main,,0,0,0,,Men theo sông đi xuống, đang tiến về phía quân ta ở Dương Châu.
Dialogue: 0,2:16:29.90,2:16:30.94,Main,,0,0,0,,Ba ngày có thể đến.
Dialogue: 0,2:16:33.65,2:16:37.73,Main,,0,0,0,,Vĩnh Vương thật là kẻ bất tài, mưu lớn mà trí yếu.
Dialogue: 0,2:16:38.57,2:16:42.71,Main,,0,0,0,,Muốn tranh thiên hạ, phải tiến về phía bắc đánh Trường An để diệt An Sử.
Dialogue: 0,2:16:42.71,2:16:46.70,Main,,0,0,0,,Hoặc tiến về phía đông đến Tuy Dương giải vây cho Trương Tuần.
Dialogue: 0,2:16:46.73,2:16:49.42,Main,,0,0,0,,Tuy gian hiểm, nhưng một khi thành công,
Dialogue: 0,2:16:49.42,2:16:51.65,Main,,0,0,0,,ắt sẽ chấn động thiên hạ.
Dialogue: 0,2:16:51.65,2:16:54.50,Main,,0,0,0,,Nay lại tiến về đông nam đánh ta,
Dialogue: 0,2:16:54.50,2:16:56.79,Main,,0,0,0,,rõ ràng là nhát gan cầu an một cõi.
Dialogue: 0,2:16:56.79,2:17:00.68,Main,,0,0,0,,Làm sao có thể khiến anh hùng thiên hạ quy thuận?
Dialogue: 0,2:17:01.69,2:17:03.83,Main,,0,0,0,,Thanh thế của Vĩnh Vương thế nào?
Dialogue: 0,2:17:03.83,2:17:07.06,Main,,0,0,0,,Có nhân vật anh hùng nào đầu quân cho Vĩnh Vương không?
Dialogue: 0,2:17:07.06,2:17:09.85,Main,,0,0,0,,Vĩnh Vương truyền hịch khắp thiên hạ, nhưng không có mấy người hưởng ứng.
Dialogue: 0,2:17:10.90,2:17:13.30,Main,,0,0,0,,À phải, có một thi nhân.
Dialogue: 0,2:17:13.36,2:17:14.43,Main,,0,0,0,,Lý Bạch.
Dialogue: 0,2:17:14.86,2:17:16.19,Main,,0,0,0,,Lý Bạch?
Dialogue: 0,2:17:16.19,2:17:18.39,Main,,0,0,0,,Lý Bạch đã theo Vĩnh Vương.
Dialogue: 0,2:17:22.40,2:17:25.77,Main,,0,0,0,,Lý Bạch đã viết cho Vĩnh Vương trọn vẹn mười một bài thơ.
Dialogue: 0,2:17:25.96,2:17:27.85,Main,,0,0,0,,Mười một bài.
Dialogue: 0,2:17:29.28,2:17:32.20,Main,,0,0,0,,Vĩnh Vương chính nguyệt đông xuất sư,
Dialogue: 0,2:17:32.23,2:17:34.85,Main,,0,0,0,,Thiên tử dao phân long hổ kỳ.
Dialogue: 0,2:17:35.73,2:17:38.65,Main,,0,0,0,,Lâu thuyền nhất cử phong ba tĩnh,
Dialogue: 0,2:17:38.65,2:17:41.32,Main,,0,0,0,,Giang Hán phiên vi yến vụ trì.
Dialogue: 0,2:17:41.32,2:17:44.23,Main,,0,0,0,,Đan Dương, Bắc Cố thị Ngô quan,
Dialogue: 0,2:17:44.23,2:17:47.23,Main,,0,0,0,,Họa xuất lâu đài vân thủy gian.
Dialogue: 0,2:18:19.32,2:18:20.48,Main,,0,0,0,,Lý phu nhân.
Dialogue: 0,2:18:22.23,2:18:24.39,Main,,0,0,0,,Vĩnh Vương đã bị đền tội.
Dialogue: 0,2:18:25.11,2:18:29.15,Main,,0,0,0,,Lý Bạch đã phạm phải đại tội mưu nghịch.
Dialogue: 0,2:18:31.92,2:18:32.71,Main,,0,0,0,,Vâng.
Dialogue: 0,2:19:04.61,2:19:06.02,Main,,0,0,0,,Lý Bạch,
Dialogue: 0,2:19:10.73,2:19:14.31,Main,,0,0,0,,ông vốn đã quy y đạo môn, tại sao lại muốn nhập thế?
Dialogue: 0,2:19:21.28,2:19:25.52,Main,,0,0,0,,Ta tu đạo mãi không có tiến triển.
Dialogue: 0,2:19:26.23,2:19:32.43,Main,,0,0,0,,Giữa núi biển, rốt cuộc nơi đâu là tiên nhân?
Dialogue: 0,2:19:34.32,2:19:37.38,Main,,0,0,0,,Ta cùng phu nhân ẩn cư ở Lư Sơn.
Dialogue: 0,2:19:37.38,2:19:40.67,Main,,0,0,0,,Vĩnh Vương mấy lần sai người đến lều cỏ,
Dialogue: 0,2:19:40.67,2:19:43.48,Main,,0,0,0,,thành tâm mời ta xuống núi tương trợ.
Dialogue: 0,2:19:43.48,2:19:47.63,Main,,0,0,0,,Ta cả đời chỉ cầu một cơ hội để thi thố tài năng.
Dialogue: 0,2:19:47.63,2:19:50.10,Main,,0,0,0,,Tuy tráng sĩ đã về già, sao có thể từ chối?
Dialogue: 0,2:19:50.10,2:19:52.27,Main,,0,0,0,,Ông không biết Vĩnh Vương tạo phản sao?
Dialogue: 0,2:19:52.73,2:19:54.18,Main,,0,0,0,,Tạo phản?
Dialogue: 0,2:19:54.31,2:19:57.38,Main,,0,0,0,,Vĩnh Vương không phải là Thiên hạ binh mã đại nguyên soái sao?
Dialogue: 0,2:19:57.38,2:19:59.19,Main,,0,0,0,,Binh mã đại nguyên soái?
Dialogue: 0,2:19:59.40,2:20:01.33,Main,,0,0,0,,Ông không biết trong thiên hạ loạn lạc này,
Dialogue: 0,2:20:01.33,2:20:03.60,Main,,0,0,0,,có bao nhiêu kẻ muốn xưng vương xưng đế sao?
Dialogue: 0,2:20:05.53,2:20:06.44,Main,,0,0,0,,Chuyện này...
Dialogue: 0,2:20:09.73,2:20:10.89,Main,,0,0,0,,Lý Bạch,
Dialogue: 0,2:20:11.44,2:20:14.02,Main,,0,0,0,,ông có biết hiện giờ mình đang ở đâu không?
Dialogue: 0,2:20:15.44,2:20:19.00,Main,,0,0,0,,Giang Hạ, Lầu Hoàng Hạc.
Dialogue: 0,2:20:19.00,2:20:20.52,Main,,0,0,0,,Lầu Hoàng Hạc.
Dialogue: 0,2:20:21.40,2:20:24.17,Main,,0,0,0,,Phải rồi, Cao Thích, Cao Tiết độ sứ.
Dialogue: 0,2:20:24.17,2:20:27.06,Main,,0,0,0,,Chúng ta quen biết nhau lúc trẻ, chính là ở nơi này.
Dialogue: 0,2:20:27.06,2:20:30.35,Main,,0,0,0,,Giang Hạ, Lầu Hoàng Hạc.
Dialogue: 0,2:20:30.43,2:20:32.88,Main,,0,0,0,,Cao Tam Thập Ngũ nhất định có thể cứu ta.
Dialogue: 0,2:20:32.88,2:20:35.42,Main,,0,0,0,,Ông... Tiết độ sứ và ông tình xưa càng sâu đậm,
Dialogue: 0,2:20:35.42,2:20:38.89,Main,,0,0,0,,thì nghi ngờ bao che vì tình riêng càng lớn, ông thật sự không hiểu sao?
Dialogue: 0,2:20:40.90,2:20:43.77,Main,,0,0,0,,Không nói nhiều với ông nữa, ông xem cái này trước đi.
Dialogue: 0,2:20:58.98,2:21:01.59,Main,,0,0,0,,Tiết độ sứ lệnh cho ta nói với ông,
Dialogue: 0,2:21:01.59,2:21:03.65,Main,,0,0,0,,mời ông hãy xem cho kỹ.
Dialogue: 0,2:21:04.07,2:21:05.88,Main,,0,0,0,,Thiên hạ Đại Đường ngày nay,
Dialogue: 0,2:21:05.88,2:21:09.10,Main,,0,0,0,,cát cứ phản loạn, khắp nơi điêu tàn.
Dialogue: 0,2:21:09.61,2:21:11.60,Main,,0,0,0,,Nơi đâu cũng là Giang Hạ.
Dialogue: 0,2:21:12.15,2:21:15.56,Main,,0,0,0,,Nơi đâu cũng là Lầu Hoàng Hạc như thế này.
Dialogue: 0,2:21:30.15,2:21:31.56,Main,,0,0,0,,Lý phu nhân.
Dialogue: 0,2:21:32.86,2:21:35.10,Main,,0,0,0,,Sứ quân không cần lo lắng cho ta.
Dialogue: 0,2:21:36.03,2:21:37.77,Main,,0,0,0,,Không giống như phu quân của ta.
Dialogue: 0,2:21:38.28,2:21:41.85,Main,,0,0,0,,Ta... lòng đã nguội lạnh.
Dialogue: 0,2:21:42.78,2:21:47.39,Main,,0,0,0,,Là từ nay sẽ ẩn cư sâu trong Lư Sơn, kết thúc quãng đời còn lại.
Dialogue: 0,2:21:49.53,2:21:51.06,Main,,0,0,0,,Bảo trọng.
Dialogue: 0,2:22:00.15,2:22:01.64,Main,,0,0,0,,Phu nhân!
Dialogue: 0,2:22:03.19,2:22:04.64,Main,,0,0,0,,Phu nhân!
Dialogue: 0,2:22:05.15,2:22:06.42,Main,,0,0,0,,Phu nhân!
Dialogue: 0,2:22:06.41,2:22:10.27,Main,,0,0,0,,Đợi ta về Lư Sơn!
Dialogue: 0,2:22:10.94,2:22:15.23,Main,,0,0,0,,Đợi ta về Lư Sơn!
Dialogue: 0,2:22:38.98,2:22:40.68,Main,,0,0,0,,Ông đã không cứu Lý Bạch.
Dialogue: 0,2:22:42.19,2:22:45.89,Main,,0,0,0,,Trên triều đường, như đi trên băng mỏng.
Dialogue: 0,2:22:46.57,2:22:50.93,Main,,0,0,0,,Một bước sai lầm, vực sâu vạn trượng.
Dialogue: 0,2:22:52.78,2:22:56.89,Main,,0,0,0,,Quách Tử Nghi đã cầu xin hoàng đế, cứu được huynh ấy.
Dialogue: 0,2:22:58.15,2:23:02.27,Main,,0,0,0,,Miễn tội chết, lưu đày Dạ Lang.
Dialogue: 0,2:23:03.40,2:23:05.88,Main,,0,0,0,,Quân tinh nhuệ của Đại Đường hiện nay có hai nhánh.
Dialogue: 0,2:23:05.87,2:23:09.27,Main,,0,0,0,,Một nhánh dưới trướng Quách Tử Nghi, Quách lệnh công.
Dialogue: 0,2:23:09.61,2:23:13.89,Main,,0,0,0,,Nhánh còn lại chính là dưới hiệu lệnh của Cao trung thừa ngài.
Dialogue: 0,2:23:14.19,2:23:15.51,Main,,0,0,0,,Phải.
Dialogue: 0,2:23:15.51,2:23:18.03,Main,,0,0,0,,Thổ Phồn đã vây thành Trường An ba tháng.
Dialogue: 0,2:23:18.03,2:23:20.29,Main,,0,0,0,,Cao trung thừa án binh bất động.
Dialogue: 0,2:23:20.32,2:23:23.44,Main,,0,0,0,,Là sợ đi vào vết xe đổ của Ca Thư Hàn đông xuất Đồng Quan,
Dialogue: 0,2:23:23.44,2:23:25.85,Main,,0,0,0,,toàn quân bị diệt sao?
Dialogue: 0,2:23:27.48,2:23:31.31,Main,,0,0,0,,Ta cũng sợ đi vào vết xe đổ của Lý Bạch.
Dialogue: 0,2:23:31.90,2:23:37.10,Main,,0,0,0,,Tuổi già sức yếu, vội vàng mà mắc sai lầm.
Dialogue: 0,2:23:38.07,2:23:41.98,Main,,0,0,0,,Nhưng trong triều ngoài nội đều có tin đồn, Quách lệnh công và Cao trung thừa
Dialogue: 0,2:23:41.98,2:23:44.94,Main,,0,0,0,,vì chuyện cứu hay không cứu Lý Bạch mà sinh lòng thù oán.
Dialogue: 0,2:23:44.94,2:23:47.92,Main,,0,0,0,,Trung thừa là vì bất hòa với Quách lệnh công,
Dialogue: 0,2:23:47.92,2:23:50.56,Main,,0,0,0,,mà cố ý làm lỡ quân cơ.
Dialogue: 0,2:23:50.86,2:23:53.56,Main,,0,0,0,,Thánh thượng cử ta đến đây,
Dialogue: 0,2:23:54.48,2:23:57.23,Main,,0,0,0,,chính là để tra rõ việc này.
Dialogue: 0,2:23:58.36,2:24:03.10,Main,,0,0,0,,Người Thổ Phồn cũng đã nghe được tin đồn này.
Dialogue: 0,2:24:03.98,2:24:05.70,Main,,0,0,0,,Báo!
Dialogue: 0,2:24:05.73,2:24:08.42,Main,,0,0,0,,Báo trung thừa, đại quân Thổ Phồn đã đến giữa hẻm núi.
Dialogue: 0,2:24:08.42,2:24:10.23,Main,,0,0,0,,Cách nơi này một canh rưỡi.
Dialogue: 0,2:24:12.98,2:24:17.33,Main,,0,0,0,,Những người ở tửu điếm Hồ cơ ở Trường An ngày đó,
Dialogue: 0,2:24:17.36,2:24:24.21,Main,,0,0,0,,Hạ Tri Chương, Vương Xương Linh, Thôi Tông Chi đều đã qua đời.
Dialogue: 0,2:24:24.23,2:24:25.92,Main,,0,0,0,,Những người còn sống,
Dialogue: 0,2:24:25.92,2:24:28.73,Main,,0,0,0,,Đỗ Phủ lưu lạc bốn phương.
Dialogue: 0,2:24:28.78,2:24:32.08,Main,,0,0,0,,Vương Duy, trước bị phản tặc bắt làm tù binh,
Dialogue: 0,2:24:32.08,2:24:36.43,Main,,0,0,0,,sống lay lắt, quãng đời còn lại cô quạnh.
Dialogue: 0,2:24:39.19,2:24:42.81,Main,,0,0,0,,Cây nến này, dù thế nào,
Dialogue: 0,2:24:43.53,2:24:46.06,Main,,0,0,0,,cũng sắp tàn rồi.
Dialogue: 0,2:24:56.32,2:24:58.42,Main,,0,0,0,,Vết máu trên khăn này,
Dialogue: 0,2:24:58.42,2:25:01.56,Main,,0,0,0,,chỉ là nửa chén rượu nho còn sót lại.
Dialogue: 0,2:25:07.81,2:25:10.06,Main,,0,0,0,,Cao trung thừa vì sao lại trêu chọc ta?
Dialogue: 0,2:25:11.61,2:25:13.73,Main,,0,0,0,,Công công, thứ tội.
Dialogue: 0,2:25:14.07,2:25:16.73,Main,,0,0,0,,Chúng ta nên đi lấy lại thành Vân Sơn rồi.
Dialogue: 0,2:25:17.27,2:25:19.31,Main,,0,0,0,,Lấy thương của ta lại đây.
Dialogue: 0,2:25:47.61,2:25:50.77,Main,,0,0,0,,Đây là một con đường cũ đã bị người ta lãng quên từ lâu.
Dialogue: 0,2:25:50.77,2:25:53.63,Main,,0,0,0,,Đường đi hiểm trở, đại quân không thể đi qua.
Dialogue: 0,2:25:53.63,2:25:55.23,Main,,0,0,0,,Nhưng lại là một con đường tắt.
Dialogue: 0,2:25:55.40,2:25:59.14,Main,,0,0,0,,Một canh giờ, chúng ta có thể đến thẳng dưới chân thành Vân Sơn.
Dialogue: 0,2:26:40.86,2:26:42.31,Main,,0,0,0,,Ta hiểu rồi.
Dialogue: 0,2:26:43.53,2:26:45.57,Main,,0,0,0,,Cao trung thừa hôm nay ở Kiếm Nam,
Dialogue: 0,2:26:45.57,2:26:47.04,Main,,0,0,0,,và Ca Thư Hàn năm xưa ở Đồng Quan,
Dialogue: 0,2:26:47.04,2:26:49.06,Main,,0,0,0,,là cùng một tình thế khó khăn.
Dialogue: 0,2:26:50.06,2:26:52.52,Main,,0,0,0,,Tiến hay thủ đều là thế thua.
Dialogue: 0,2:26:52.73,2:26:56.38,Main,,0,0,0,,Cao trung thừa không tiến cũng không thủ, ngược lại còn lùi một bước,
Dialogue: 0,2:26:56.38,2:26:59.13,Main,,0,0,0,,dụ quân Thổ Phồn vào hẻm núi.
Dialogue: 0,2:26:59.15,2:27:02.23,Main,,0,0,0,,Rồi đoạt lại thành Vân Sơn, cắt đứt đường lui của chúng.
Dialogue: 0,2:27:02.73,2:27:04.67,Main,,0,0,0,,Bảy vạn quân Thổ Phồn vừa rồi,
Dialogue: 0,2:27:04.67,2:27:07.48,Main,,0,0,0,,không có đường thoát, đã trở thành rùa trong chum.
Dialogue: 0,2:27:08.15,2:27:10.83,Main,,0,0,0,,Đội quân Thổ Phồn đang vây hãm Trường An,
Dialogue: 0,2:27:10.83,2:27:14.77,Main,,0,0,0,,sẽ phải giải vây, quay đầu lại cứu con rùa này.
Dialogue: 0,2:27:14.77,2:27:15.93,Main,,0,0,0,,Cao minh.
Dialogue: 0,2:27:17.32,2:27:20.79,Main,,0,0,0,,Nhưng Cao trung thừa, Lô Thủy quan tuy hiểm trở,
Dialogue: 0,2:27:20.79,2:27:22.44,Main,,0,0,0,,nhưng dù sao cũng chỉ có sáu ngàn quân thủ.
Dialogue: 0,2:27:23.57,2:27:25.27,Main,,0,0,0,,Vạn nhất không thể giữ vững,
Dialogue: 0,2:27:26.11,2:27:27.35,Main,,0,0,0,,đại quân Thổ Phồn...
Dialogue: 0,2:27:27.58,2:27:29.84,Main,,0,0,0,,Đại quân Thổ Phồn đến rồi!
Dialogue: 0,2:27:29.84,2:27:31.52,Main,,0,0,0,,Điều công công lo lắng là...
Dialogue: 0,2:27:31.86,2:27:35.98,Main,,0,0,0,,Nghiêm Vũ bây giờ chắc đã đến Lô Thủy quan.
Dialogue: 0,2:27:36.03,2:27:39.13,Main,,0,0,0,,Sứ giả đến trong trướng lúc nãy là của hắn.
Dialogue: 0,2:27:39.13,2:27:41.96,Main,,0,0,0,,Nghiêm Vũ còn có hai vạn tinh binh của hắn.
Dialogue: 0,2:27:41.96,2:27:45.23,Main,,0,0,0,,Chúng ta hẹn không phải là ngày kia đến,
Dialogue: 0,2:27:45.23,2:27:46.96,Main,,0,0,0,,Viện quân đến rồi!
Dialogue: 0,2:27:46.96,2:27:50.02,Main,,0,0,0,,mà là rạng sáng hôm nay.
Dialogue: 0,2:28:00.36,2:28:01.93,Main,,0,0,0,,Khâm phục.
Dialogue: 0,2:28:01.94,2:28:04.58,Main,,0,0,0,,Cao trung thừa nổi tiếng nghiêm cẩn thẳng thắn,
Dialogue: 0,2:28:04.58,2:28:07.81,Main,,0,0,0,,lại thi triển ra thuật lừa gạt xuất thần nhập hóa như vậy.
Dialogue: 0,2:28:08.19,2:28:10.47,Main,,0,0,0,,Trường An được cứu rồi.
Dialogue: 0,2:28:10.48,2:28:14.63,Main,,0,0,0,,Trình công công đã là cao đồ của Cao công công,
Dialogue: 0,2:28:14.63,2:28:17.46,Main,,0,0,0,,không cần nói cũng biết võ nghệ cao cường.
Dialogue: 0,2:28:17.46,2:28:19.46,Main,,0,0,0,,Năm xưa trong biến cố Tiên Thiên,
Dialogue: 0,2:28:19.46,2:28:23.00,Main,,0,0,0,,khí phách một mình một ngựa phá Thừa Thiên Môn của Cao công công,
Dialogue: 0,2:28:23.00,2:28:25.38,Main,,0,0,0,,nhất định cũng đã truyền cho Trình công công.
Dialogue: 0,2:28:25.38,2:28:26.58,Main,,0,0,0,,Cao trung thừa,
Dialogue: 0,2:28:26.58,2:28:29.02,Main,,0,0,0,,phép khích tướng này cũng quá rõ ràng rồi.
Dialogue: 0,2:29:23.36,2:29:24.88,Main,,0,0,0,,Trong thành có động tĩnh!
Dialogue: 0,2:29:24.90,2:29:27.14,Main,,0,0,0,,Tập hợp, mau tập hợp!
Dialogue: 0,2:30:10.15,2:30:13.02,Main,,0,0,0,,Nào, vì Trường An!
Dialogue: 0,2:30:13.86,2:30:17.10,Main,,0,0,0,,Trường An!
Dialogue: 0,2:30:22.40,2:30:25.02,Main,,0,0,0,,Lập trận, mau lập trận!
Dialogue: 0,2:31:06.57,2:31:10.06,Main,,0,0,0,,Cao Thích, huynh có biết làm sao để lừa được đối thủ không?
Dialogue: 0,2:31:10.65,2:31:13.92,Main,,0,0,0,,Phải chuẩn bị đủ các loại mồi nhử, chi tiết phải như thật.
Dialogue: 0,2:31:13.92,2:31:16.50,Main,,0,0,0,,Nhìn trái nhìn phải, nhìn trên nhìn dưới,
Dialogue: 0,2:31:16.50,2:31:18.35,Main,,0,0,0,,nhìn thế nào cũng là thật.
Dialogue: 0,2:31:19.28,2:31:23.73,Main,,0,0,0,,Ngay cả bản thân mình cũng tưởng là thật.
Dialogue: 0,2:31:57.23,2:32:00.56,Main,,0,0,0,,Công công, Nghiêm Vũ trẻ tuổi dũng mãnh.
Dialogue: 0,2:32:01.19,2:32:03.00,Main,,0,0,0,,Bảy vạn quân Thổ Phồn này,
Dialogue: 0,2:32:03.00,2:32:05.89,Main,,0,0,0,,đói rét khó chịu, chẳng mấy ngày sẽ bị phá.
Dialogue: 0,2:32:09.32,2:32:12.63,Main,,0,0,0,,Cao trung thừa đương nhiên biết, như vậy thì
Dialogue: 0,2:32:12.63,2:32:15.85,Main,,0,0,0,,công lao đánh bại Thổ Phồn sẽ hoàn toàn thuộc về Nghiêm Vũ.
Dialogue: 0,2:32:19.44,2:32:21.27,Main,,0,0,0,,Từ biệt tại đây.
Dialogue: 0,2:32:46.19,2:32:50.28,Main,,0,0,0,,Cao trung thừa, lần này đi qua Thành Đô, ta đã gặp Đỗ Phủ.
Dialogue: 0,2:32:50.28,2:32:53.15,Main,,0,0,0,,Ồ, ông ấy vẫn ổn chứ?
Dialogue: 0,2:32:53.15,2:32:54.28,Main,,0,0,0,,Rất tốt.
Dialogue: 0,2:32:54.28,2:32:58.02,Main,,0,0,0,,Ông ấy nói, đa tạ trung thừa đã chiếu cố khi ở Thành Đô.
Dialogue: 0,2:33:13.03,2:33:14.42,Main,,0,0,0,,Đỗ Phủ còn nói,
Dialogue: 0,2:33:14.42,2:33:16.96,Main,,0,0,0,,sở dĩ lúc trước Quách Tử Nghi ra mặt cứu Lý Bạch,
Dialogue: 0,2:33:16.96,2:33:20.35,Main,,0,0,0,,thực ra là do Cao trung thừa viết thư khẩn cầu Quách Tử Nghi.
Dialogue: 0,2:33:21.03,2:33:24.32,Main,,0,0,0,,Cao trung thừa muốn cứu Lý Bạch, nhưng lại phải nhờ cậy Quách Tử Nghi,
Dialogue: 0,2:33:24.32,2:33:27.10,Main,,0,0,0,,là để tránh tình xưa của ngài và Lý Bạch bị người ta nắm thóp,
Dialogue: 0,2:33:27.10,2:33:28.73,Main,,0,0,0,,ngược lại còn hại Lý Bạch.
Dialogue: 0,2:33:29.65,2:33:32.56,Main,,0,0,0,,Cao trung thừa, ta đoán không sai chứ?
Dialogue: 0,2:33:36.65,2:33:38.82,Main,,0,0,0,,Ta còn có tin tức của Lý Bạch.
Dialogue: 0,2:33:38.82,2:33:39.83,Main,,0,0,0,,Gì?
Dialogue: 0,2:33:39.83,2:33:42.89,Main,,0,0,0,,Trước Tết, tiên hoàng đế đại xá thiên hạ.
Dialogue: 0,2:33:43.32,2:33:45.94,Main,,0,0,0,,Lý Bạch đã được tha tội rồi.
Dialogue: 0,2:33:48.15,2:33:50.80,Main,,0,0,0,,Một bài thơ mới ông ấy viết sau khi được tha,
Dialogue: 0,2:33:50.80,2:33:52.48,Main,,0,0,0,,ta đã thuộc lòng rồi.
Dialogue: 0,2:34:02.03,2:34:09.02,Main,,0,0,0,,Triêu từ Bạch Đế thái vân gian,
Dialogue: 0,2:34:09.86,2:34:16.43,Main,,0,0,0,,Thiên lý Giang Lăng nhất nhật hoàn.
Dialogue: 0,2:34:17.32,2:34:24.87,Main,,0,0,0,,Lưỡng ngạn viên thanh đề bất trú,
Dialogue: 0,2:34:24.90,2:34:32.77,Main,,0,0,0,,Khinh chu dĩ quá vạn trùng san.
Dialogue: 0,2:34:34.98,2:34:38.33,Main,,0,0,0,,Lưỡng ngạn viên thanh đề bất trú,
Dialogue: 0,2:34:38.33,2:34:45.98,Main,,0,0,0,,Khinh chu dĩ quá vạn trùng san.
Dialogue: 0,2:35:08.23,2:35:11.08,Main,,0,0,0,,Cao trung thừa, từ trong thơ có thể biết,
Dialogue: 0,2:35:11.08,2:35:12.43,Main,,0,0,0,,tâm trạng của ông ấy không tệ.
Dialogue: 0,2:35:12.94,2:35:14.95,Main,,0,0,0,,Xem ra còn chưa đến Dạ Lang,
Dialogue: 0,2:35:14.95,2:35:18.98,Main,,0,0,0,,vừa mới đến thành Bạch Đế, ông ấy đã được tha rồi.
Dialogue: 0,2:35:50.65,2:35:53.52,Main,,0,0,0,,Trung thừa, chuẩn bị xong rồi thì chúng ta xuất phát thôi.
Dialogue: 0,2:35:54.23,2:35:55.48,Main,,0,0,0,,Được.
Dialogue: 0,2:36:08.32,2:36:10.94,Main,,0,0,0,,Trong tập thơ này, ngươi thích thơ của ai?
Dialogue: 0,2:36:11.78,2:36:13.71,Main,,0,0,0,,Đương nhiên là của trung thừa ngài rồi.
Dialogue: 0,2:36:13.71,2:36:15.17,Main,,0,0,0,,Bớt nịnh hót đi.
Dialogue: 0,2:36:15.17,2:36:16.39,Main,,0,0,0,,Còn ai nữa?
Dialogue: 0,2:36:17.19,2:36:20.96,Main,,0,0,0,,Thôi Hiệu, Mạnh Hạo Nhiên, Vương Xương Linh, đều hay.
Dialogue: 0,2:36:20.96,2:36:22.68,Main,,0,0,0,,Của Sầm Tham cũng hay.
Dialogue: 0,2:36:22.69,2:36:27.64,Main,,0,0,0,,Vương Duy... của Vương Duy ta đọc không hiểu lắm.
Dialogue: 0,2:36:27.65,2:36:29.68,Main,,0,0,0,,Sau này sẽ đọc hiểu thôi.
Dialogue: 0,2:36:35.44,2:36:38.25,Main,,0,0,0,,Đương nhiên, trung thừa ngài đừng trách,
Dialogue: 0,2:36:38.25,2:36:40.23,Main,,0,0,0,,ta thích nhất vẫn là Lý Bạch.
Dialogue: 0,2:36:40.57,2:36:45.23,Main,,0,0,0,,Trường An nhất phiến nguyệt, vạn hộ đảo y thanh.
Dialogue: 0,2:36:45.31,2:36:46.60,Main,,0,0,0,,Hay biết bao.
Dialogue: 0,2:36:48.94,2:36:51.50,Main,,0,0,0,,Phải rồi trung thừa, thơ của Đỗ Phủ,
Dialogue: 0,2:36:51.50,2:36:53.71,Main,,0,0,0,,tại sao không được thu vào tập này ạ?
Dialogue: 0,2:36:53.71,2:36:55.67,Main,,0,0,0,,Thơ của Đỗ Phủ không hay sao?
Dialogue: 0,2:36:55.67,2:36:59.13,Main,,0,0,0,,Tương lai các tập khác sẽ thu vào.
Dialogue: 0,2:36:59.13,2:37:01.02,Main,,0,0,0,,Có mắt không tròng.
Dialogue: 0,2:37:01.61,2:37:04.32,Main,,0,0,0,,Nhưng mấy bài thơ về Lầu Hoàng Hạc mà ngài nhắc đến,
Dialogue: 0,2:37:04.32,2:37:06.06,Main,,0,0,0,,thì đều được thu vào rồi.
Dialogue: 0,2:37:06.48,2:37:08.54,Main,,0,0,0,,Ai, thật đáng tiếc.
Dialogue: 0,2:37:08.54,2:37:11.27,Main,,0,0,0,,Lầu Hoàng Hạc bị cháy rồi, không còn nữa.
Dialogue: 0,2:37:13.86,2:37:15.31,Main,,0,0,0,,Không sao.
Dialogue: 0,2:37:16.28,2:37:19.43,Main,,0,0,0,,Chỉ cần những bài thơ về Lầu Hoàng Hạc còn đó,
Dialogue: 0,2:37:19.94,2:37:22.73,Main,,0,0,0,,thì Lầu Hoàng Hạc sẽ còn đó.
Dialogue: 0,2:37:26.07,2:37:28.96,Main,,0,0,0,,Khứ thời tam thập vạn, độc tự hoàn Trường An.
Dialogue: 0,2:37:28.96,2:37:29.98,Main,,0,0,0,,Của ai?
Dialogue: 0,2:37:29.98,2:37:31.56,Main,,0,0,0,,Vương Xương Linh.
Dialogue: 0,2:37:31.69,2:37:36.42,Main,,0,0,0,,Trường An thiếu niên du hiệp khách, dạ thượng thú lâu khán Thái Bạch.
Dialogue: 0,2:37:36.42,2:37:37.73,Main,,0,0,0,,Vương Duy.
Dialogue: 0,2:37:38.15,2:37:42.36,Main,,0,0,0,,Nhị thập giải thư kiếm, tây du Trường An thành.
Dialogue: 0,2:37:42.36,2:37:45.27,Main,,0,0,0,,Tiểu quỷ, đây là ta viết.
Dialogue: 0,2:37:46.90,2:37:51.23,Main,,0,0,0,,Dao vọng Trường An nhật, bất kiến Trường An nhân.
Dialogue: 0,2:37:52.73,2:37:56.14,Main,,0,0,0,,Lý Bạch, Lý Thái Bạch.
Dialogue: 0,2:37:56.57,2:38:01.11,Main,,0,0,0,,Trường An như mộng lý, hà nhật thị quy kỳ.
Dialogue: 0,2:38:01.11,2:38:03.68,Main,,0,0,0,,Vẫn là Lý Bạch.
Dialogue: 0,2:38:06.86,2:38:08.56,Main,,0,0,0,,Trường An à.
Dialogue: 0,2:38:09.36,2:38:11.14,Main,,0,0,0,,Chỉ cần thơ còn,
Dialogue: 0,2:38:11.53,2:38:13.02,Main,,0,0,0,,sách còn,
Dialogue: 0,2:38:13.69,2:38:17.65,Main,,0,0,0,,Trường An sẽ còn mãi.
Dialogue: 0,2:39:09.40,2:39:11.19,Main,,0,0,0,,Tại hạ Lý Bạch.
Dialogue: 0,2:39:11.20,2:39:13.85,Main,,0,0,0,,Tại hạ Cao Thích.
Dialogue: 0,2:40:30.11,2:40:35.16,Main,,0,0,0,,Trường An hồi vọng tú thành đôi,
Dialogue: 0,2:40:35.14,2:40:41.23,Main,,0,0,0,,Sơn đỉnh thiên môn thứ đệ khai.
Dialogue: 0,2:40:41.73,2:40:45.58,Main,,0,0,0,,Phù sinh chỉ hợp tôn tiền lão,
Dialogue: 0,2:40:45.58,2:40:49.23,Main,,0,0,0,,Tuyết mãn Trường An đạo.
Dialogue: 0,2:40:49.65,2:40:56.50,Main,,0,0,0,,Hoa Ngạc lâu tiền vũ lộ tân,
Dialogue: 0,2:40:56.50,2:41:04.44,Main,,0,0,0,,Trường An thành lý thái bình nhân.
Dialogue: 0,2:41:04.44,2:41:08.54,Main,,0,0,0,,Tự cổ chu nhan bất tái lai,
Dialogue: 0,2:41:08.54,2:41:12.40,Main,,0,0,0,,Quân bất kiến ngoại châu khách,
Dialogue: 0,2:41:12.40,2:41:18.77,Main,,0,0,0,,Trường An đạo, nhất hồi lai, nhất hồi lão.
Dialogue: 0,2:41:20.23,2:41:24.33,Main,,0,0,0,,Trường An nhất phiến nguyệt,
Dialogue: 0,2:41:24.33,2:41:28.64,Main,,0,0,0,,Vạn hộ đảo y thanh.
Dialogue: 0,2:41:29.98,2:41:37.21,Main,,0,0,0,,Trường An thiếu niên du hiệp khách,
Dialogue: 0,2:41:37.21,2:41:44.52,Main,,0,0,0,,Dạ thượng thú lâu khán Thái Bạch.
Dialogue: 0,2:41:45.32,2:41:48.67,Main,,0,0,0,,Nhất vi thiên khách khứ Trường Sa,
Dialogue: 0,2:41:48.67,2:41:52.17,Main,,0,0,0,,Tây vọng Trường An bất kiến gia.
Dialogue: 0,2:41:52.17,2:41:55.65,Main,,0,0,0,,Lầu Hoàng Hạc trung xuy ngọc địch,
Dialogue: 0,2:41:55.65,2:42:00.06,Main,,0,0,0,,Giang thành ngũ nguyệt lạc mai hoa.
Dialogue: 0,2:44:29.61,2:44:34.58,Main,,0,0,0,,Đãi mộ sắc phương tòng bích sơn hạ,
Dialogue: 0,2:44:34.58,2:44:39.25,Main,,0,0,0,,Khán sơn nguyệt thị phủ tùy nhân quy.
Dialogue: 0,2:44:39.25,2:44:44.75,Main,,0,0,0,,Hồi đầu tái hồi đầu khước cố hồi tái cố hồi sở lai kính,
Dialogue: 0,2:44:44.75,2:44:47.83,Main,,0,0,0,,Cánh thương thương sơn lâm u thâm lý,
Dialogue: 0,2:44:47.83,2:44:50.60,Main,,0,0,0,,Hoành thúy vi.
Dialogue: 0,2:44:54.98,2:44:59.92,Main,,0,0,0,,Thanh thiên Thục hạ hành lộ nan,
Dialogue: 0,2:44:59.92,2:45:04.46,Main,,0,0,0,,Thất đồ dĩ chuyển vạn lý san.
Dialogue: 0,2:45:04.46,2:45:10.17,Main,,0,0,0,,Quân mạc tiếu nha mạc tiếu nha ngã đẳng mộng tỉnh nhưng túy,
Dialogue: 0,2:45:10.17,2:45:17.02,Main,,0,0,0,,Phiếm chu dĩ độ vạn trùng thủy.
Dialogue: 0,2:45:17.61,2:45:22.67,Main,,0,0,0,,Thiên sinh ngã tài tất hữu dụng, ồ ta,
Dialogue: 0,2:45:22.67,2:45:27.88,Main,,0,0,0,,Để nhật nguyệt cùng tinh tú đi cược thua thắng.
Dialogue: 0,2:45:27.88,2:45:32.92,Main,,0,0,0,,Cổ lai thánh hiền giai tịch mịch,
Dialogue: 0,2:45:32.92,2:45:39.77,Main,,0,0,0,,Duy hữu ẩm giả lưu kỳ danh.
Dialogue: 0,2:46:20.86,2:46:25.96,Main,,0,0,0,,Thiên sinh ngã tài tất hữu dụng, ồ ta,
Dialogue: 0,2:46:25.96,2:46:31.17,Main,,0,0,0,,Dám cùng trời đất so chân tình.
Dialogue: 0,2:46:31.17,2:46:36.08,Main,,0,0,0,,Cổ lai thánh hiền giai tịch mịch,
Dialogue: 0,2:46:36.08,2:46:41.29,Main,,0,0,0,,Duy hữu ẩm giả lưu kỳ danh.
Dialogue: 0,2:46:41.29,2:46:45.96,Main,,0,0,0,,Thiên sinh ngã tài tất hữu dụng, ồ ta,
Dialogue: 0,2:46:45.96,2:46:51.25,Main,,0,0,0,,Để nhật nguyệt cùng tinh tú đi cược thua thắng.
Dialogue: 0,2:46:51.25,2:46:56.17,Main,,0,0,0,,Cổ lai thánh hiền giai tịch mịch,
Dialogue: 0,2:46:56.17,2:47:03.75,Main,,0,0,0,,Duy hữu ẩm giả lưu kỳ danh.
Dialogue: 0,2:47:03.75,2:47:08.63,Main,,0,0,0,,Đãi mộ sắc phương tòng bích sơn hạ,
Dialogue: 0,2:47:08.63,2:47:13.29,Main,,0,0,0,,Khán sơn nguyệt tùy nhân quy.
Dialogue: 0,2:47:13.29,2:47:19.13,Main,,0,0,0,,Hồi đầu tái cố hồi sở lai kính,
Dialogue: 0,2:47:19.13,2:47:22.63,Main,,0,0,0,,Hựu thương thương sơn lâm,
Dialogue: 0,2:47:22.63,2:47:28.93,Main,,0,0,0,,Hoành thúy vi.
